{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "app_insights_name": {
            "defaultValue": "azuredevophack-insights",
            "type": "string",
			 "metadata":{  
             "description":"The Name of the Application Insights"
           }
        },
        "app_insights_location": {
            "defaultValue": "northeurope",
            "type": "string",
			"metadata":{  
              "description":"The location that you want to deploy your application Insights"
          }
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Insights/components",
            "apiVersion": "2015-05-01",
            "name": "[parameters('app_insights_name')]",
            "location": "[parameters('app_insights_location')]",
            "kind": "web",
            "properties": {
                "Application_Type": "web",
                "Flow_Type": "Redfield",
                "Request_Source": "AppServiceEnablementCreate"
            }
        }
    ]
}



