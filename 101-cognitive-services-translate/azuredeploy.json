{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "accountName": {
      "defaultValue": "translate",
      "metadata": {
        "description": "Display name of Computer Translation API account"
      },
      "type": "string"
    },
    "SKU": {
      "type": "string",
      "metadata": {
        "description": "SKU for Computer Translation API"
      },
      "defaultValue": "F0",
      "allowedValues": [
        "F0",
        "S1",
        "S2",
        "S3",
        "S4"
      ]
    },
    "cognitiveServicesLocation": {
      "metadata": {
        "description": "The location for the Computer Vision API"
      },
      "type": "string",
      "minLength": 1,
      "allowedValues": [
        "westeurope",
        "eastus2",
        "southeastasia",
        "centralus",
        "westus"
      ],
    
    }
  },
  "variables": {
    "cognitiveservicesid": "[concat(resourceGroup().id,'/providers/','Microsoft.CognitiveServices/accounts/', parameters('accountName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.CognitiveServices/accounts",
      "sku": {
        "name": "[parameters('SKU')]"
      },
      "kind": "TextTranslation",
      "name": "[parameters('accountName')]",
      "apiVersion": "2017-04-18",
      "location": "[parameters('cognitiveServicesLocation')]",
      "properties": {},
    }
  ],
  "outputs": {
    "cognitivekeys": {
      "type": "object",
      "value": "[listKeys(variables('cognitiveservicesid'),'2017-04-18')]"
    },
    "cognitivekey1": {
      "type": "string",
      "value": "[listKeys(variables('cognitiveservicesid'),'2017-04-18').key1]"
    },
    "cognitivekey2": {
      "type": "string",
      "value": "[listKeys(variables('cognitiveservicesid'),'2017-04-18').key2]"
    },
    "endpoint": {
      "type": "string",
      "value": "[reference(variables('cognitiveservicesid'),'2017-04-18').endpoint]"
    }
  }
}