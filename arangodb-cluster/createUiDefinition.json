{
  "handler": "Microsoft.Compute.MultiVm",
  "version": "0.0.1-preview",
  "parameters": {
    "basics": [
                {
        "name": "vmUserName",
        "type": "Microsoft.Compute.UserNameTextBox",
        "label": "VM user name",
        "defaultValue": "",
        "toolTip": "",
        "osPlatform": "Linux"
      },
      {
        "name": "SSHCredntials",
        "type": "Microsoft.Compute.CredentialsCombo",
        "label": {
          "authenticationType": "Authentication type",
          "password": "Password",
          "confirmPassword": "Confirm password",
          "sshPublicKey": "SSH public key"
        },
        "toolTip": {
          "authenticationType": "",
          "password": "",
          "sshPublicKey": ""
        },
        "constraints": {
          "required": true
        },
        "options": {
          "hidePassword": true
        },
        "osPlatform": "Linux"
      },
      {
        "name": "vmSize",
        "type": "Microsoft.Compute.SizeSelector",
        "label": "Database VM size",
        "toolTip": "",
        "defaultValue": "Standard_D4_v2",
        "recommendedSizes": [
          "Standard_D2_v2",
          "Standard_D3_v2",
          "Standard_D4_v2"
        ],
        "constraints": {
          "excludedSizes": [
            "Basic_A0",
            "Basic_A1",
            "Basic_A2",
            "Basic_A3",
            "Basic_A4",
            "Standard_A0"
          ]
        },
        "osPlatform": "Linux",
        "imageReference": {
          "publisher": "Canonical",
          "offer": "UbuntuServer",
          "sku": "16.04.0-LTS"
        },
        "count": 4
      },
      {
        "name": "nodeCount",
        "type": "Microsoft.Common.TextBox",
        "label": "Number of DB Server nodes",
        "defaultValue": "4",
        "toolTip": "Number of DB Server nodes, 4 to 10",
        "constraints": {
          "required": true,
          "regex": "^([4-9]|10)$",
          "validationMessage": "Number of DB Server nodes must within 4 to 10"
        }
      },
            
{
        "name": "clusterName",
        "type": "Microsoft.Common.TextBox",
        "label": "Cluster name",
        "toolTip": "The name of the new Sample Linux cluster.",
        "constraints": {
          "required": true,
          "regex": "^[a-z0-9]{3,24}$",
          "validationMessage": "Cluster names must be between 3 and 24 characters long, and can contain only numbers and lowercase letters."
        }
      },
      {
        "name": "adminUsername",
        "type": "Microsoft.Compute.UserNameTextBox",
        "label": "Username",
        "toolTip": "Admin username for the virtual machines. Same Credientials is to SSH to the box.",
        "osPlatform": "Linux"
      },
      {
        "name": "SSHCredntials",
        "type": "Microsoft.Compute.CredentialsCombo",
        "label": {
                  "authenticationType": "Authentication type",
                  "password": "Password",
                  "confirmPassword": "Confirm password",
                  "sshPublicKey": "SSH public key"
                },
        "toolTip": {
                "authenticationType": "",
                "password": "",
                "sshPublicKey": ""
              },
         "constraints": {
                "required": true
              },
"options": {
  "hideConfirmation": false
},
"osPlatform": "Linux"
}
    ],
    "steps": [
      {
        "name": "SampleClusterConfig",
        "label": "Cluster settings",
        "subLabel": {
          "preValidation": "Configure the cluster",
          "postValidation": "Done"
        },
        "bladeTitle": "Cluster cluster settings",
        "elements": [
          {
            "name": "clusterNodeCount",
            "type": "Microsoft.Common.DropDown",
            "label": "Cluster size",
            "defaultValue": "1",
            "toolTip": "The number of virtual machines (nodes) to provision for the cluster.",
            "constraints": {
              "allowedValues": [
                {
                  "label": "1",
                  "value": 1
                },
                {
                  "label": "4",
                  "value": 4
                }

              ]
            }
          },
          {
            "name": "clusterVmSize",
            "type": "Microsoft.Compute.SizeSelector",
            "label": "Virtual machine size",
            "toolTip": "The size of virtual machine to provision for each cluster node.",
            "recommendedSizes": [
              "Standard_D1",
              "Standard_D2",
              "Standard_D3",
              "Standard_D4"
            ],
            "constraints": {
              "allowedSizes": [
                "Standard_D1",
                "Standard_D2",
                "Standard_D3",
                "Standard_D4"
              ]
            },
            "osPlatform": "Linux",
            "imageReference": {
              "publisher": "Canonical",
              "offer": "UbuntuServer",
              "sku": "14.04.2-LTS"
            },
            "count": "[steps('SampleClusterConfig').clusterNodeCount]"
          }

        ]
      }
    ],
    "outputs": {
      "clusterName": "[basics('clusterName')]",
      "adminUsername": "[basics('adminUsername')]",
      "clusterNodeCount": "[steps('SampleClusterConfig').clusterNodeCount]",
      "clusterVmSize": "[steps('SampleClusterConfig').clusterVmSize]",
      "location": "[location()]",
      "authenticationType":  "[basics('SSHCredntials').authenticationType]",
      "password": "[basics('SSHCredntials').password]",
      "sshKey": "[basics('SSHCredntials').sshPublicKey]"
    }
  }
}
