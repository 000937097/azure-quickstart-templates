{
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "siteName": {
            "type": "string"
        },
        "hostingPlanName": {
            "type": "string"
        },
        "hostingEnvironment": {
            "type": "string"
        },
        "sku": {
            "type": "string",
            "allowedValues": [
                "Free",
                "Shared",
                "Basic",
                "Standard",
                "Premium"
            ],
            "defaultValue": "Standard"
        },
        "workerSize": {
            "type": "string",
            "allowedValues": [
                "0",
                "1",
                "2"
            ],
            "defaultValue": "0"
        },
        "webDeploy_AuthenticationKey": {
            "type": "string"
        },
        "webDeploy_SecureAuthenticationKey": {
            "type": "string"
        },
        "webDeploy_LoggedInKey": {
            "type": "string"
        },
        "webDeploy_NonceKey": {
            "type": "string"
        },
        "webDeploy_AuthenticationSalt": {
            "type": "string"
        },
        "webDeploy_SecureAuthenticationSalt": {
            "type": "string"
        },
        "webDeploy_LoggedInSalt": {
            "type": "string"
        },
        "webDeploy_NonceSalt": {
            "type": "string"
        },
        "dnsName": {
            "type": "string",
            "metadata": {
                "description": "Connect to your cluster using dnsName.cloudapp.net"
            }
        },
        "wpDbUsername": {
            "type": "string",
            "defaultValue": "wpuser",
            "metadata": {
                "description": "Connect to your cluster using dnsName.cloudapp.net"
            }
        },
        "wpDbPassword": { 
            "type": "securestring",
            "metadata": {
                "description": "Connect to your cluster using dnsName.cloudapp.net"
            }
        },
        "vmUserName": {
            "type": "string",
            "metadata": {
                "description": "user name to ssh to the VMs"
            }
        },
        "vmPassword": {
            "type": "securestring",
            "metadata": {
                "description": "password to ssh to the VMs"
            }
        },
        "mysqlRootPassword": {
            "type": "securestring",
            "metadata": {
                "description": "mysql root user password"
            }
        },
        "mysqlReplicationPassword": {
            "type": "securestring",
            "metadata": {
                "description": "mysql replication user password"
            }
        },
        "mysqlProbePassword": {
            "type": "securestring",
            "metadata": {
                "description": "mysql probe password"
            }
        },
        "vmSize": {
            "type": "string",
            "defaultValue": "Standard_A1",
            "metadata": {
                "description": "size for the VMs"
            }
        },
        "storageAccountType": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "metadata": {
                "description": "Storage account type for the cluster"
            }
        },
        "virtualNetworkName": {
            "type": "string",
            "defaultValue": "mysqlvnet",
            "metadata": {
                "description": "Virtual network name for the cluster"
            }
        },
        "dbSubnetName": {
            "type": "string",
            "defaultValue": "dbsubnet",
            "metadata": {
                "description": "subnet name for the MySQL nodes"
            }
        },
        "vnetAddressPrefix": {
            "type": "string",
            "defaultValue": "10.0.0.0/16",
            "metadata": {
                "description": "IP address in CIDR for virtual network"
            }
        },
        "dbSubnetAddressPrefix": {
            "type": "string",
            "defaultValue": "10.0.1.0/24",
            "metadata": {
                "description": "IP address in CIDR for db subnet"
            }
        },
        "vmIPPrefix": {
            "type": "string",
            "defaultValue": "10.0.1.",
            "metadata": {
                "description": "IP address prefix for VMs must be available in db subnet"
            }
        },
        "vmIPStartAddress": {
            "type": "int",
            "defaultValue": 4,
            "metadata": {
                "description": "start IP address for VMs"
            }
        },
        "imagePublisher": {
            "type": "string",
            "defaultValue": "OpenLogic",
            "allowedValues": [
                "OpenLogic",
                "Canonical"
            ],
            "metadata": {
                "description": "publisher for the VM OS image"
            }
        },
        "imageOffer": {
            "type": "string",
            "defaultValue": "CentOS",
            "allowedValues": [
                "CentOS",
                "UbuntuServer"
            ],
            "metadata": {
                "description": "VM OS name"
            }
        },
        "imageSKU": {
            "type": "string",
            "defaultValue": "6.5",
            "allowedValues": [
                "6.5",
                "12.04.5-LTS"
            ],
            "metadata": {
                "description": "VM OS version"
            }
        },
        "mysqlFrontEndPort": {
            "type": "int",
            "defaultValue": 3306,
            "metadata": {
                "description": "MySQL public port"
            }
        },
        "sshNatRuleFrontEndPort0": {
            "type": "int",
            "defaultValue": 64001,
            "metadata": {
                "description": "public ssh port for VM1"
            }
        },
        "sshNatRuleFrontEndPort1": {
            "type": "int",
            "defaultValue": 64002,
            "metadata": {
                "description": "public ssh port for VM2"
            }
        },
        "mysqlTemplateLocation": {
            "type": "string",
            "defaultValue": "https://raw.githubusercontent.com/liupeirong/azure-quickstart-templates/master/mysql-replication/",
            "metadata": {
                "description": "file location for mysql template and my.cnf.template"
            }
        },
        "customScriptCommandToExecute": {
            "type": "string",
            "defaultValue": "bash azuremysql.sh",
            "metadata": {
                "description": "bash script command line"
            }
        },
        "websiteTemplateLocation": {
            "type": "string",
            "defaultValue": "https://raw.githubusercontent.com/liupeirong/azure-quickstart-templates/master/website-mysql",
            "metadata": {
                "description": "template file location"
            }
        },

    },
    "resources": [
        {
            "name": "mysql",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2015-01-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('mysqlTemplateLocation'), '/azuredeploy.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "dnsName": "[parameters('dnsName')]",
                    "vmUserName": "[parameters('vmUserName')]",
                    "vmPassword": "[parameters('vmPassword')]",
                    "mysqlRootPassword": "[parameters('mysqlRootPassword')]",
                    "mysqlReplicationPassword": "[parameters('mysqlReplicationPassword')]",
                    "mysqlProbePassword": "[parameters('mysqlProbePassword')]",
                    "vmSize": "[parameters('vmSize')]",
                    "storageAccountType": "[parameters('storageAccountType')]",
                    "virtualNetworkName": "[parameters('virtualNetworkName')]",
                    "dbSubnetName": "[parameters('dbSubnetName')]",
                    "vnetAddressPrefix": "[parameters('vnetAddressPrefix')]",
                    "dbSubnetAddressPrefix": "[parameters('dbSubnetAddressPrefix')]",
                    "vmIPPrefix": "[parameters('vmIPPrefix')]",
                    "vmIPStartAddress": "[parameters('vmIPStartAddress')]",
                    "imagePublisher": "[parameters('imagePublisher')]",
                    "imageOffer": "[parameters('imageOffer')]",
                    "imageSKU": "[parameters('imageSKU')]",
                    "mysqlFrontEndPort": "[parameters('mysqlFrontEndPort')]",
                    "sshNatRuleFrontEndPort0": "[parameters('sshNatRuleFrontEndPort0')]",
                    "sshNatRuleFrontEndPort1": "[parameters('sshNatRuleFrontEndPort1')]",
                    "customScriptFilePath": "[concat(parameters('mysqlTemplateLocation'), 'azuremysql.sh')]",
                    "mysqlConfigFilePath": "[concat(parameters('mysqlTemplateLocation'), 'my.cnf.template')]",
                    "customScriptCommandToExecute": "[parameters('customScriptCommandToExecute')]"
                }
            }
        },
        {
            "name": "website",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2015-01-01",
            "dependsOn": [
                "Microsoft.Resources/deployments/mysql"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('websiteTemplateLocation'), '/website.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "siteName": "[parameters('siteName')]",
                    "hostingPlanName": "[parameters('hostingPlanName')]",
                    "hostingEnvironment": "[parameters('hostingEnvironment')]",
                    "siteLocation": "[resourceGroup().location]",
                    "serverFarmResourceGroup": "[resourceGroup().name]",
                    "sku": "[parameters('sku')]",
                    "workerSize": "[parameters('workerSize')]",
                    "webDeploy_AuthenticationKey": "[parameters('webDeploy_AuthenticationKey')]",
                    "webDeploy_SecureAuthenticationKey": "[parameters('webDeploy_SecureAuthenticationKey')]",
                    "webDeploy_LoggedInKey": "[parameters('webDeploy_LoggedInKey')]",
                    "webDeploy_NonceKey": "[parameters('webDeploy_NonceKey')]",
                    "webDeploy_AuthenticationSalt": "[parameters('webDeploy_AuthenticationSalt')]",
                    "webDeploy_SecureAuthenticationSalt": "[parameters('webDeploy_SecureAuthenticationSalt')]",
                    "webDeploy_LoggedInSalt": "[parameters('webDeploy_LoggedInSalt')]",
                    "webDeploy_NonceSalt": "[parameters('webDeploy_NonceSalt')]",
                    "DbServer": "[concat(parameters('dnsName'), '.', resourceGroup().location, 'cloudapp.azure.com')]",
                    "DbName": "wordpress",
                    "DbUsername": "[parameters('wpDbUsername')]",
                    "DbPassword": "[parameters('wpDbPassword')]",
                    "DbAdminUsername": "root",
                    "DbAdminPassword": "[parameters('mysqlRootPassword')]"
                }
            }
        }
    ]
}