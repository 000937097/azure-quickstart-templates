{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "allowedValues": [
        "West US",
        "East US",
        "East Asia",
        "Southeast Asia",
        "West Europe"
      ],
      "metadata": {
        "description": "Location where resources will be provisioned"
      }
    },
    "storageAccountNamePrefix": {
      "type": "string",
      "metadata": {
        "description": "Unique DNS name for the Storage Account where the VM's disks will be placed"
      }
    },
    "domainName": {
      "type": "string",
      "metadata": {
        "description": "Domain name of the publicly accessible VM in the format: {domainName}.{location}.cloudapp.com For example: mydomainname.westus.cloudapp.azure.com"
      }
    },
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "Username for the VMs"
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Password for the VMs"
      }
    },
    "virtualNetworkName": {
      "type": "string",
      "defaultValue": "myVnet",
      "metadata": {
        "description": "Name of the virtual network that the consumer wants to use"
      }
    },
    "vmSize": {
      "type": "string",
      "defaultValue": "Standard_A1",
      "metadata": {
        "description": "Size of the virtual machine"
      }
    }
  },
  "variables": {
    "templateURLBase": "https://raw.githubusercontent.com/rarsan/azure-quickstart-templates/master/splunk-on-ubuntu/",
    "standaloneTemplateUrl": "[concat(variables('templateURLBase'), 'standalone-instance-resources.json')]",
    "networkSettings": {
      "virtualNetworkName": "[parameters('virtualNetworkName')]",
      "addressPrefix": "10.0.0.0/16",
      "subnet": {
        "standalone": {
          "name": "standalone",
          "prefix": "10.0.0.0/24",
          "vnet": "[parameters('virtualNetworkName')]"
        }
      }
    },
    "osSettings": {
      "imageReference": {
        "publisher": "Canonical",
        "offer": "UbuntuServer",
        "sku": "14.04.2-LTS",
        "version": "latest"
      },
      "scripts": [
        "[concat(variables('templateURLBase'),'vm-disk-utils-0.1.sh')]",
        "[concat(variables('templateURLBase'),'node-setup.sh')]"
      ]
    },
    "sharedStorageAccountName": "[concat(parameters('storageAccountNamePrefix'),'shared')]"
  },
  "resources": [
    {
      "apiVersion": "2015-05-01-preview",
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[variables('sharedStorageAccountName')]",
      "location": "[parameters('location')]",
      "properties": {
        "accountType": "Standard_LRS"
      }
    },
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[parameters('virtualNetworkName')]",
      "location": "[parameters('location')]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[variables('networkSettings').addressPrefix]"
          ]
        },
        "subnets": [
          {
            "name": "[variables('networkSettings').subnet.standalone]",
            "properties": {
              "addressPrefix": "[variables('networkSettings').subnet.standalone.prefix]"
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2015-01-01",
      "type": "Microsoft.Resources/deployments",
      "name": "splunk-deployment",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('standaloneTemplateUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "domainName": {
            "value": "[parameters('domainName')]"
          },
          "storageAccountName": {
            "value": "[variables('sharedStorageAccountName')]"
          },
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "namespace": {
            "value": "standalone-instance"
          },
          "region": {
            "value": "[parameters('region')]"
          },
          "subnet": {
            "value": "[variables('networkSettings').subnet.standalone]"
          },
          "vmSize": {
            "value": "[parameters('vmSize')]"
          },
          "osSettings": {
            "value": "[variables('osSettings')]"
          }
        }
      }
    }
  ],
  "outputs": {}
}
