{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "metadata": {
        "description": "Location where resources will be provisioned"
      }
    },
    "storageAccountNamePrefix": {
      "type": "string",
      "metadata": {
        "description": "Unique DNS name for the Storage Account where the VM's disks will be placed"
      }
    },
    "storageAccountType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "metadata": {
        "description": "Storage account type which determines data redundancy and underlying drive type"
      }
    },
    "deploymentSize": {
      "type": "string",
      "defaultValue": "SingleInstance",
      "allowedValues": [
        "Standalone",
        "Cluster"
      ],
      "metadata": {
        "description": "Splunk deployment type"
      }
    },
    "domainName": {
      "type": "string",
      "metadata": {
        "description": "Domain name of the publicly accessible VM in the format: {domainName}.{location}.cloudapp.azure.com For example: mydomainname.westus.cloudapp.azure.com"
      }
    },
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "Username for the VMs"
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Password for the VMs"
      }
    },
    "splunkAdminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Password for Splunk admin"
      }
    },
    "virtualNetworkName": {
      "type": "string",
      "metadata": {
        "description": "Name of the virtual network that the consumer wants to use"
      }
    },
    "vmSize": {
      "type": "string",
      "metadata": {
        "description": "Size of the virtual machine"
      }
    }
  },
  "variables": {
    "templateBaseUrl": "https://raw.githubusercontent.com/rarsan/azure-quickstart-templates/develop/splunk-on-ubuntu/",
    "sharedTemplateUrl": "[concat(variables('templateBaseUrl'), 'shared-resources.json')]",
    "splunkTemplateUrl": "[concat(variables('templateBaseUrl'), 'splunk-2disk-resources.json')]",
    "emptyTemplateUrl": "[concat(variables('templateBaseUrl'), 'empty-resources.json')]",
    "tshirtSizeStandalone": {
      "vmSize": "[parameters('vmSize')]",
      "diskSize": 1023,
      "searchheadTierTemplate": "[variables('splunkTemplateUrl')]",
      "searchHeadTierCount": 1,
      "indexerTierTemplate": "[variables('emptyTemplateUrl')]",
      "indexerTierCount": 0,
      "storage": {
        "name": "[parameters('storageAccountNamePrefix')]",
        "type": "[parameters('storageAccountType')]",
        "count": 1,
        "map": [
          0,
          0
        ],
        "jumpbox": 0
      }
    },
    "tshirtSizeCluster": {
      "vmSize": "[parameters('vmSize')]",
      "diskSize": 1023,
      "searchheadTierTemplate": "[variables('splunkTemplateUrl')]",
      "searchheadTierCount": 1,
      "indexerTierTemplate": "[variables('splunkTemplateUrl')]",
      "indexerTierCount": 3,
      "storage": {
        "name": "[parameters('storageAccountNamePrefix')]",
        "type": "[parameters('storageAccountType')]",
        "count": 2,
        "map": [
          0,
          1
        ],
        "jumpbox": 0
      }
    },
    "tshirtSize": "[variables(concat('tshirtSize', parameters('deploymentSize')))]",
    "networkSettings": {
      "virtualNetworkName": "[parameters('virtualNetworkName')]",
      "addressPrefix": "10.0.0.0/16",
      "subnet": {
        "sh": {
          "name": "sh",
          "prefix": "10.0.0.0/24",
          "vnet": "[parameters('virtualNetworkName')]"
        },
        "idx": {
          "name": "idx",
          "prefix": "10.0.1.0/24",
          "vnet": "[parameters('virtualNetworkName')]"
        }
      },
      "statics": {
        "shRange": {
          "base": "10.0.0.",
          "start": 5
        },
        "idxRange": {
          "base": "10.0.1.",
          "start": 5
        },
        "idxClusterMaster": "10.0.1.250"
      }
    },
    "osSettings": {
      "imageReference": {
        "publisher": "Canonical",
        "offer": "UbuntuServer",
        "sku": "14.04.2-LTS",
        "version": "latest"
      },
      "scripts": [
        "[concat(variables('templateBaseUrl'),'vm-disk-utils-0.1.sh')]",
        "[concat(variables('templateBaseUrl'),'node-setup.sh')]"
      ]
    },
    "splunkSettings": {
      "standalone": {
        "role": "splunk_server"
      },
      "cluster": {
        "master": {
          "role": "splunk_cluster_master"
        },
        "peer": {
          "role": "splunk_cluster_peer"
        },
        "searchhead": {
          "role": "splunk_cluster_search_head"
        }
      }
    }
  },
  "resources": [
    {
      "name": "shared",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('sharedTemplateUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "[parameters('location')]"
          },
          "networkSettings": {
            "value": "[variables('networkSettings')]"
          },
          "storageSettings": {
            "value": "[variables('tshirtSize').storage]"
          }
        }
      }
    },
    {
      "apiVersion": "2015-01-01",
      "type": "Microsoft.Resources/deployments",
      "name": "searchhead-tier",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', 'shared')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('tshirtSize').searchheadTierTemplate]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "namespace": {
            "value": "sh"
          },
          "machineSettings": {
            "value": {
              "vmCount": "[variables('tshirtSize').searchheadTierCount]",
              "vmSize": "[variables('tshirtSize').vmSize]",
              "diskSize": "[variables('tshirtSize').diskSize]",
              "staticIps": "[variables('networkSettings').statics.shRange]",
              "publicDns": "[concat(parameters('domainName'), '-sh')]"
            }
          },
          "storageSettings": {
            "value": "[variables('tshirtSize').storage]"
          },
          "osSettings": {
            "value": "[variables('osSettings')]"
          },
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "splunkAdminPassword": {
            "value": "[parameters('splunkAdminPassword')]"
          },
          "splunkServerRole": {
            "value": "[variables('splunkSettings').standalone.role]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "subnet": {
            "value": "[variables('networkSettings').subnet.sh]"
          }
        }
      }
    },
    {
      "apiVersion": "2015-01-01",
      "type": "Microsoft.Resources/deployments",
      "name": "indexer-tier",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', 'shared')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('tshirtSize').indexerTierTemplate]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "namespace": {
            "value": "idx"
          },
          "machineSettings": {
            "value": {
              "vmCount": "[variables('tshirtSize').indexerTierCount]",
              "vmSize": "[variables('tshirtSize').vmSize]",
              "diskSize": "[variables('tshirtSize').diskSize]",
              "staticIps": "[variables('networkSettings').statics.idxRange]",
              "publicDns": "[concat(parameters('domainName'), '-idx')]"
            }
          },
          "storageSettings": {
            "value": "[variables('tshirtSize').storage]"
          },
          "osSettings": {
            "value": "[variables('osSettings')]"
          },
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "splunkAdminPassword": {
            "value": "[parameters('splunkAdminPassword')]"
          },
          "splunkServerRole": {
            "value": "[variables('splunkSettings').standalone.role]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "subnet": {
            "value": "[variables('networkSettings').subnet.idx]"
          }
        }
      }
    }
  ],
  "outputs": {}
}
