{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "airflowWebAppName": {
            "type": "string",
            "defaultValue": "airflow-postgres",
            "metadata": {
                "description": "Name of Airflow web app"
            }
        },
        "servicePlanSku": {
            "type": "string",
            "allowedValues": [
                "F1",
                "B1",
                "S1",
                "S2",
                "S3",
                "P1",
                "P2",
                "P3"
            ],
            "defaultValue": "B1",
            "metadata": {
                "description": "Size for Service Plan"
            }
        },
        "servicePlanTier": {
            "type": "string",
            "allowedValues": [
                "Standard",
                "Premium",
                "PremiumV2"
            ],
            "defaultValue": "Standard",
            "metadata": {
                "description": "Tier for Service Plan"
            }
        },
        "postgreDatabaseLogin": {
            "type": "string",
            "minLength": 1,
            "metadata": {
                "description": "Database administrator login name"
            }
        },
        "postgrePassword": {
            "type": "securestring",
            "minLength": 8,
            "maxLength": 128,
            "metadata": {
                "description": "Database administrator password"
            }
        },
        "postgreSkuCapacity": {
            "type": "int",
            "defaultValue": 1,
            "allowedValues": [
                1,
                2,
                4,
                8,
                16,
                32
            ],
            "metadata": {
                "description": "Azure database for PostgreSQL compute capacity in vCores (1, 2, 4, 8, 16, 32)"
            }
        },
        "postgreSkuName": {
            "type": "string",
            "defaultValue": "B_Gen5_1",
            "allowedValues": [
                "B_Gen5_1",
                "B_Gen5_2",
                "GP_Gen5_2",
                "GP_Gen5_4",
                "GP_Gen5_8"
            ],
            "metadata": {
                "description": "Azure database for PostgreSQL SKU name "
            }
        },
        "postgreSkuSizeMB": {
            "type": "int",
            "allowedValues": [
                102400,
                51200,
                10240,
                5120
            ],
            "defaultValue": 5120,
            "metadata": {
                "description": "Azure database for PostgreSQL Sku Size "
            }
        },
        "postgreSkuTier": {
            "type": "string",
            "defaultValue": "Basic",
            "allowedValues": [
                "Basic",
                "GeneralPurpose",
                "MemoryOptimized"
            ],
            "metadata": {
                "description": "Azure database for PostgreSQL pricing tier"
            }
        },
        "postgreVersion": {
            "type": "string",
            "allowedValues": [
                "9.5",
                "9.6",
                "10",
                "11"
            ],
            "defaultValue": "11",
            "metadata": {
                "description": "PostgreSQL version"
            }
        },
        "postgreSkuFamily": {
            "type": "string",
            "defaultValue": "Gen5",
            "metadata": {
                "description": "Azure database for PostgreSQL SKU family"
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources."
            }
        },
        "guidValue": {
            "type": "string",
            "defaultValue": "[newGuid()]"
        }
    },
    "variables": {
        "databaseName": "airflowdb",
        "serverName": "[concat(parameters('airflowWebAppName'), '-dbserver-', uniqueString(parameters('guidValue')))]",
        "AirflowUserName": "[concat(parameters('postgreDatabaseLogin'), '@', variables('serverName'))]",
        "servicePlan": "[concat(parameters('airflowWebAppName'), '-service-plan')]",
        "pgServerName": "[concat('Microsoft.DBforPostgreSQL/servers/', variables('serverName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Web/sites",
            "name": "[parameters('airflowWebAppName')]",
            "apiVersion": "2019-08-01",
            "kind": "app,linux,container",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[variables('servicePlan')]",
                "[variables('databaseName')]"
            ],
            "comments": "Airflow lauched based on the latest Docker image of apache/airflow.",
            "properties": {
                "siteConfig": {
                    "linuxFxVersion": "DOCKER|puckel/docker-airflow:latest",
                    "requestTracingEnabled": true,
                    "httpLoggingEnabled": true,
                    "detailedErrorLoggingEnabled": true,
                    "autoHealEnabled": true
                },
                "name": "[parameters('airflowWebAppName')]",
                "httpsOnly": true,
                "serverFarmId": "[variables('servicePlan')]"
            },
            "resources": [
                {
                    "name": "appsettings",
                    "type": "config",
                    "apiVersion": "2019-08-01",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/sites', parameters('airflowWebAppName'))]"
                    ],
                    "tags": {
                        "displayName": "Airflow App Settings"
                    },
                    "comments": "This are the generated settings for the Airflow Web App",
                    "properties": {
                        "AIRFLOW__CORE__SQL_ALCHEMY_CONN": "[concat('postgresql://', variables('AirflowUserName'),':',parameters('postgrePassword'),'@',reference(resourceId('Microsoft.DBforPostgreSQL/servers',variables('serverName'))).fullyQualifiedDomainName,':5432/',variables('databaseName'))]",
                        "AIRFLOW__CORE__SQL_ALCHEMY_POOL_SIZE": 20,
                        "AIRFLOW__CORE__LOAD_EXAMPLES": "true",
                        "AIRFLOW__CORE__EXECUTOR": "LocalExecutor",
                        "WEBSITES_ENABLE_APP_SERVICE_STORAGE": "true"
                    }
                }
            ]
        },
        {
            "apiVersion": "2019-08-01",
            "kind": "linux",
            "location": "[parameters('location')]",
            "name": "[variables('servicePlan')]",
            "properties": {
                "name": "[variables('servicePlan')]",
                "workerSizeId": "1",
                "reserved": true,
                "numberOfWorkers": "1"
            },
            "sku": {
                "Tier": "[parameters('servicePlanTier')]",
                "Name": "[parameters('servicePlanSku')]"
            },
            "type": "Microsoft.Web/serverfarms"
        },
        {
            "apiVersion": "2017-12-01",
            "type": "Microsoft.DBforPostgreSQL/servers",
            "location": "[parameters('location')]",
            "name": "[variables('serverName')]",
            "sku": {
                "name": "[parameters('postgreSkuName')]",
                "tier": "[parameters('postgreSkuTier')]",
                "capacity": "[parameters('postgreSkuCapacity')]",
                "size": "[parameters('postgreSkuSizeMB')]",
                "family": "[parameters('postgreSkuFamily')]"
            },
            "properties": {
                "version": "[parameters('postgreVersion')]",
                "administratorLogin": "[parameters('postgreDatabaseLogin')]",
                "administratorLoginPassword": "[parameters('postgrePassword')]",
                "storageMB": "[parameters('postgreSkuSizeMB')]",
                "sslEnforcement": "Enabled",
                "minimalTlsVersion": "TLSEnforcementDisabled",
                "infrastructureEncryption": "Disabled",
                "publicNetworkAccess": "Enabled"
            },
            "resources": [
                {
                    "type": "firewallrules",
                    "apiVersion": "2017-12-01",
                    "dependsOn": [
                        "[variables('pgServerName')]"
                    ],
                    "location": "[parameters('location')]",
                    "name": "[concat(variables('serverName'),'firewall')]",
                    "properties": {
                        "startIpAddress": "0.0.0.0",
                        "endIpAddress": "255.255.255.255"
                    }
                },
                {
                    "name": "[variables('databaseName')]",
                    "type": "databases",
                    "apiVersion": "2017-12-01",
                    "properties": {
                        "charset": "utf8",
                        "collation": "English_United States.1252"
                    },
                    "dependsOn": [
                        "[variables('pgServerName')]"
                    ]
                }
            ]
        },
        {
            "type": "Microsoft.Web/sites/hostNameBindings",
            "apiVersion": "2018-11-01",
            "name": "[concat(parameters('airflowWebAppName'), '/', parameters('airflowWebAppName'), '.azurewebsites.net')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', parameters('airflowWebAppName'))]"
            ],
            "properties": {
                "siteName": "[variables('serverName')]",
                "hostNameType": "Verified"
            }
        }
    ]
}
