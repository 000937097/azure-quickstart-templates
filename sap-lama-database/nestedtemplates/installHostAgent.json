{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmName": {
            "type": "string",
            "metadata": {
                "description": ""
            }
        },
        "cseExtName": {
            "type": "string",
            "metadata": {
                "description": ""
            }
        },
        "cseExtPublisher": {
            "type": "string",
            "metadata": {
                "description": ""
            }
        },
        "cseExtVersion": {
            "type": "string",
            "metadata": {
                "description": ""
            }
        },
        "sapcarLocation": {
            "type": "string",
            "metadata": {
                "description": ""
            }
        },
        "sapHostAgentArchiveLocation": {
            "type": "string",
            "metadata": {
                "description": ""
            }
        },
        "sapacExtLocation": {
            "type": "string",
            "metadata": {
                "description": ""
            }
        },
        "sapadmPassword": {
            "type": "securestring",
            "minLength": "6",
            "metadata": {
                "description": "Password for the sapadm account."
            }
        },
        "sapadmId": {
            "type": "string",
            "defaultValue": "790",
            "metadata": {
                "description": ""
            }
        },
        "sapsysGid": {
            "type": "string",
            "defaultValue": "79",
            "metadata": {
                "description": ""
            }
        },
        "osType": {
            "type": "string",
            "metadata": {
                "description": ""
            }
        }
    },    
    "variables": {
        "commands": {
            "Linux": "[concat('groupadd -g ', parameters('sapsysGid') , ' sapsys; useradd -u ', parameters('sapadmId') , ' -g ', parameters('sapsysGid') , ' sapadm; ./sapcar -xvf SAPHOSTAGENT.SAR -R hostagent; pushd hostagent; ./saphostexec -install; popd; /usr/sap/hostctrl/exe/sapacosprep -a InstallAcExt -m SAPACEXT.SAR; echo ''sapadm:', parameters('sapadmPassword'), ''' | chpasswd')]",
            "Windows": "[concat('.\\sapcar.exe -xvf SAPHOSTAGENT.SAR -R hostagent; pushd hostagent; Write-Output \"', parameters('sapadmPassword') , '\" | .\\saphostexec.exe -install, popd; & \"C:\\Program Files\\SAP\\hostctrl\\exe\\sapacosprep.exe\" -a InstallAcExt -m SAPACEXT.SAR')]"
        },
        "command": "[variables('commands')[parameters('osType')]]"
    },
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(parameters('vmName'), '/', parameters('cseExtName'))]",
            "apiVersion": "2017-12-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "publisher": "[parameters('cseExtPublisher')]",
                "type": "[parameters('cseExtName')]",
                "typeHandlerVersion": "[parameters('cseExtVersion')]",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "fileUris": [
                        "[parameters('sapcarLocation')]",
                        "[parameters('sapHostAgentArchiveLocation')]",
                        "[parameters('sapacExtLocation')]"
                    ]
                },
                "protectedSettings": {
                    "commandToExecute": "[variables('command')]"
                }
            }
        }
    ]
}