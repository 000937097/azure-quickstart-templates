{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "iotHubName": {
      "type": "string",
      "minLength": 3,
      "metadata": {
        "description": "Specifies the name of the IoT Hub."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Specifies the location for all resources."
      }
    },
    "skuName": {
      "type": "string",
      "defaultValue": "F1",
      "metadata": {
        "description": "Specifies the IotHub SKU."
      }
    },
    "capacityUnits": {
      "type": "int",
      "minValue": 1,
      "defaultValue": 1,
      "metadata": {
        "description": "Specifies the number of provisioned IoT Hub units. Restricted to 1 unit for the F1 SKU. Can be set up to maximum number allowed for subscription."
      }
    }
  },
  "variables": {
    "apiVersion": "2018-04-01",
    "eventHubEndpoints": {
      "messageRetentionInDaysPeriod": 1,
      "partitionCount": 2
    },
    "cloudToDevice": {
      "messagesTTLAsIso8601": "PT1H",
      "messagesMaxDeliveryCount": 10,
      "feebackMessagesTTLAsIso8601": "PT1H",
      "feedbackMessagesMaxDeliveryCount": 10,
      "feedbackMessagesLockDurationAsIso8601": "PT60S"
    },
    "messagingEndpoints": {
      "messagesLockDurationAsIso8601": "PT1M",
      "messagesTTLAsIso8601": "PT1H",
      "messagesMaxDeliveryCount": 10
    },
    "consumerGroup": {
      "name": "[concat(parameters('iotHubName'), '/events/cg1')]"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Devices/IotHubs",
      "apiVersion": "2018-04-01",
      "name": "[parameters('iotHubName')]",
      "location": "[parameters('location')]",
      "properties": {
        "eventHubEndpoints": {
          "events": {
            "retentionTimeInDays": "[variables('eventHubEndpoints').messageRetentionInDaysPeriod]",
            "partitionCount": "[variables('eventHubEndpoints').partitionCount]"
          }
        },
        "cloudToDevice": {
          "defaultTtlAsIso8601": "[variables('cloudToDevice').messagesTTLAsIso8601]",
          "maxDeliveryCount": "[variables('cloudToDevice').messagesMaxDeliveryCount]",
          "feedback": {
            "maxDeliveryCount": "[variables('cloudToDevice').feedbackMessagesMaxDeliveryCount]",
            "ttlAsIso8601": "[variables('cloudToDevice').feebackMessagesTTLAsIso8601]",
            "lockDurationAsIso8601": "[variables('cloudToDevice').feedbackMessagesLockDurationAsIso8601]"
          }
        },
        "messagingEndpoints": {
          "fileNotifications": {
            "lockDurationAsIso8601": "[variables('messagingEndpoints').messagesLockDurationAsIso8601]",
            "ttlAsIso8601": "[variables('messagingEndpoints').messagesTTLAsIso8601]",
            "maxDeliveryCount": "[variables('messagingEndpoints').messagesMaxDeliveryCount]",
          }
        }
      },
      "sku": {
        "name": "[parameters('skuName')]",
        "capacity": "[parameters('capacityUnits')]"
      }
    },
    {
      "type": "Microsoft.Devices/iotHubs/eventhubEndpoints/ConsumerGroups",
      "apiVersion": "2018-04-01",
      "name": "[variables('consumerGroup').name]",
      "dependsOn": [
        "[resourceId('Microsoft.Devices/IotHubs', parameters('iotHubName'))]"
      ]
    }
  ],
  "outputs": {
    "iotHubKeys": {
      "value": "[listKeys(resourceId('Microsoft.Devices/iotHubs', parameters('iotHubName')), variables('apiVersion'))]",
      "type": "object"
    }
  }
}