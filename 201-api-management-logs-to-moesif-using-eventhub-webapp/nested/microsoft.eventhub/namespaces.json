{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "eventHubNsName": {
            "type": "String",
            "defaultValue": "demo-event-hub-ns-"
        },
        "eventHubName": {
            "type": "String",
            "defaultValue": "demo-event-hub"
        },
        "eventHubSendPolicyName": {
            "type": "String",
            "defaultValue": "demo-evt-hub-apim-send-policy"
        },
        "eventHubListenPolicy": {
            "type": "String",
            "defaultValue": "demo-evt-hub-app-consume-policy"
        },
        "ehNsSkuName": {
            "type": "String",
            "defaultValue": "Basic"
        },
        "ehNsSkuTier": {
            "type": "String",
            "defaultValue": "Basic"
        },
        "ehNsSkuCapacity": {
            "type": "String",
            "defaultValue": "1"
        },
        "ehNsIsAutoInflateEnabled": {
            "type": "String",
            "defaultValue": "false"
        },
        "ehNsMaximumThroughputUnits": {
            "type": "String",
            "defaultValue": "0"
        },
        "ehNsZoneRedundant": {
            "type": "Bool",
            "defaultValue": false
        },
        "tags": {
            "type": "Object",
            "defaultValue": {
                "purpose": "demo"
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources."
            }
        },
        "hostnameSuffix": {
            "type": "string",
            "defaultValue": "[utcNow('yyyyMMdd-hhmm')]",
            "metadata": {
                "description": "Creates a unique suffix for DNS name"
            }
        }
    },
    "variables": {
        "ehNsUniqSvcName": "[concat(parameters('eventHubNsName'), parameters('hostnameSuffix'))]",
        "ehUniqSvcName": "[concat(variables('ehNsUniqSvcName'), '/', parameters('eventHubName'))]",
        "ehUniqApimSendPolicyName": "[concat(variables('ehUniqSvcName'), '/', parameters('eventHubSendPolicyName'))]",
        "ehUniqAppConsumePolicyName": "[concat(variables('ehNsUniqSvcName'), '/', parameters('eventHubListenPolicy'))]"
    },
    "resources": [
        {
            "type": "Microsoft.EventHub/namespaces",
            "apiVersion": "2018-01-01-preview",
            "name": "[variables('ehNsUniqSvcName')]",
            "location": "[parameters('location')]",
            "tags": "[parameters('tags')]",
            "sku": {
                "name": "[parameters('ehNsSkuName')]",
                "tier": "[parameters('ehNsSkuTier')]",
                "capacity": "[parameters('ehNsSkuCapacity')]"
            },
            "properties": {
                "isAutoInflateEnabled": "[parameters('ehNsIsAutoInflateEnabled')]",
                "maximumThroughputUnits": "[parameters('ehNsMaximumThroughputUnits')]",
                "zoneRedundant": "[parameters('ehNsZoneRedundant')]"
            }
        },
        {
            "type": "Microsoft.EventHub/namespaces/eventhubs",
            "apiVersion": "2017-04-01",
            "name": "[variables('ehUniqSvcName')]",
            "location": "[parameters('location')]",
            "tags": "[parameters('tags')]",
            "dependsOn": [
                "[resourceId('Microsoft.EventHub/namespaces', variables('ehNsUniqSvcName'))]"
            ],
            "properties": {
                "messageRetentionInDays": 1,
                "partitionCount": 2,
                "status": "Active"
            }
        },
        {
            "type": "Microsoft.EventHub/namespaces/eventhubs/authorizationRules",
            "apiVersion": "2017-04-01",
            "name": "[variables('ehUniqApimSendPolicyName')]",
            "location": "[parameters('location')]",
            "tags": "[parameters('tags')]",
            "dependsOn": [
                "[resourceId('Microsoft.EventHub/namespaces/eventhubs', variables('ehNsUniqSvcName'), parameters('eventHubName'))]"
            ],
            "properties": {
                "rights": [
                    "Listen",
                    "Send"
                ]
            }
        },
        {
            "type": "Microsoft.EventHub/namespaces/authorizationRules",
            "apiVersion": "2017-04-01",
            "name": "[variables('ehUniqAppConsumePolicyName')]",
            "location": "[parameters('location')]",
            "tags": "[parameters('tags')]",
            "dependsOn": [
                "[resourceId('Microsoft.EventHub/namespaces', variables('ehNsUniqSvcName'))]"
            ],
            "properties": {
                "rights": [
                    "Manage",
                    "Listen",
                    "Send"
                ]
            }
        }
    ],
    "outputs": {
        "eventHubSendConnStr": {
            "type": "string",
            "value": "[listKeys(resourceId('Microsoft.EventHub/namespaces/eventhubs/authorizationRules', variables('ehNsUniqSvcName'), parameters('eventHubName'), parameters('eventHubSendPolicyName')), '2015-08-01').primaryConnectionString]"
        },
        "eventHubListenConnStr": {
            "type": "string",
            "value": "[listKeys(resourceId('Microsoft.EventHub/namespaces/authorizationRules', variables('ehNsUniqSvcName'), parameters('eventHubListenPolicy')), '2015-08-01').primaryConnectionString]"
        },
        "eventHubName": {
            "type": "string",
            "value": "[parameters('eventHubName')]"
        }
    }
}