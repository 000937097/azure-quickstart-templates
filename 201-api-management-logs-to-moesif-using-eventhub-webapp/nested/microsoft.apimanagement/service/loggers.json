{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "existingApiMgmtName": {
            "type": "string",
            "metadata": {
                "description": "Name of existing Api Management service. eg: 'blue-api-mgmt-v2'"
            }
        },
        "logToEventhubLoggerId": {
            "type": "string",
            "metadata": {
                "description": "The name of log-to-eventhub 'logger-id' referred to in policy xml"
            }
        },
        "eventHubLoggerConnStr": {
            "type": "securestring",
            "metadata": {
                "description": "EventHub connection string to send / publish logs"
            }
        },
        "tags": {
            "type": "Object",
            "defaultValue": {}
        }
    },
    "functions": [],
    "variables": {
        "credentialsName": "[concat('credentials-', parameters('logToEventhubLoggerId'))]"
    },
    "resources": [
        {
            "type": "Microsoft.ApiManagement/service/loggers",
            "apiVersion": "2020-06-01-preview",
            "name": "[concat(parameters('existingApiMgmtName'), '/', parameters('logToEventhubLoggerId'))]",
            "tags": "[parameters('tags')]",
            "properties": {
                "loggerType": "azureEventHub",
                "description": "This logger logs to event hub",
                "credentials": {
                    "name": "[variables('credentialsName')]",
                    "connectionString": "[parameters('eventHubLoggerConnStr')]"
                }
            }
        }
    ],
    "outputs": {
        "logToEventhubLoggerId": {
            "type": "string",
            "value": "[parameters('logToEventhubLoggerId')]"
        },
        "resourceId": {
            "type": "string",
            "value": "[resourceId('Microsoft.ApiManagement/service/loggers', parameters('existingApiMgmtName'), parameters('logToEventhubLoggerId'))]"
        }
    }
}