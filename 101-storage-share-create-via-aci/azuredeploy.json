{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "storageAccountType": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Standard_GRS",
                "Standard_ZRS",
                "Premium_LRS"
            ],
            "metadata": {
                "description": "Storage Account type"
            }
        },
        "storageAccountName": {
            "type": "string",
            "defaultValue": "[resourceGroup().name]"
        },
        "shareName": {
            "type": "string",
            "defaultValue": "[resourceGroup().name]"
        }
    },
    "variables": {
        "image": "microsoft/azure-cli",
        "cpuCores": "1.0",
        "memoryInGb": "1.5",
        "containerGroupName":"[concat(parameters('storageAccountName'), '-createShare')]",
        "containerName": "createShare",
        "logsResourceId": "[concat(resourceId(variables('containerGroupName')), '/containers/', [variables('containerName')], '/logs']"

    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('storageAccountName')]",
            "apiVersion": "2016-01-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "[parameters('storageAccountType')]"
            },
            "kind": "Storage",
            "properties": {}
        },
        {
            "name": "[parameters('containerGroupName')]",
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2018-02-01-preview",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Storage/storageAccounts/', parameters('storageAccountName'))]"
              ],
            "properties": {
                "containers": [
                    {
                        "name": "[variables('containerName')]",
                        "properties": {
                            "image": "[variables('image')]",
                            "command": [
                                "az",
                                "storage",
                                "share",
                                "create",
                                "--name",
                                "[parameters('shareName')]"
                            ],
                            "environmentVariables": [
                                {
                                    "additionalProperties": {},
                                    "name": "AZURE_STORAGE_KEY",
                                    "value": "[listKeys(parameters('storageAccountName'),'2016-01-01').key1]"
                                },
                                {
                                    "additionalProperties": {},
                                    "name": "AZURE_STORAGE_ACCOUNT",
                                    "value": "[parameters('storageAccountName')]"
                                }
                            ],
                            "resources": {
                                "requests": {
                                    "cpu": "[variables('cpuCores')]",
                                    "memoryInGb": "[variables('memoryInGb')]"
                                }
                            }
                        }
                    }
                ],
                "restartPolicy": "OnFailure",
                "osType": "Linux"
            }
        }
    ],
    "outputs": {
        "createOutput": {
            "type": "object",
            "value": "[reference(variables('logsResourceId')]"
        }
    }
}