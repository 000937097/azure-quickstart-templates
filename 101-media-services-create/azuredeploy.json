{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "name": {
      "type": "string",
      "metadata": {
        "description": "Name of the Media Services Account."
      }
    },
    "storageName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Storage."
      }
    },
    "storageType": {
      "type": "string",
      "allowedValues": [
        "Standard_LRS",
        "Standard_GRS",
        "Standard_RAGRS"
      ],
      "metadata": {
        "description": "Type of the Storage. Please note you can only choose Locally Redundant, Geo-Redundant and Read-only Access Geo-Redundant as storage type to work with Azure Media Services."
      }
    }
  },
  "resources": [
    {
      "dependsOn": [
        "[concat('microsoft.storage/storageaccounts/', parameters('storageName'))]"
      ],
      "apiVersion": "2015-10-01",
      "name": "[parameters('name')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "storageAccounts": [
          {
            "isPrimary": true,
            "id": "[resourceId('microsoft.storage/storageaccounts/', parameters('storageName'))]"
          }
        ]
      },
      "type": "Microsoft.Media/mediaServices"
    },
    {
      "name": "[parameters('storageName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2015-06-15",
      "location": "[resourceGroup().location]",
      "properties": {
        "accountType": "[parameters('storageType')]"
      }
    }
  ]
}