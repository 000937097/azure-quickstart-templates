{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "mediaServiceName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Media Services account. A Media Services account name is globally unique, all lowercase numbers or letters with no spaces."
      }
    }
  },
  "variables": {
    "storageName": "[uniqueString(resourceGroup().id)]",
    "storageType": "Standard_LRS"
  },
  "resources": [
    {
      "name": "[parameters('mediaServiceName')]",
      "type": "Microsoft.Media/mediaServices",
      "apiVersion": "2015-10-01",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('microsoft.storage/storageaccounts/', variables('storageName'))]"
      ],
      "properties": {
        "storageAccounts": [
          {
            "isPrimary": true,
            "id": "[resourceId('microsoft.storage/storageaccounts/', variables('storageName'))]"
          }
        ]
      }
    },
    {
      "name": "[variables('storageName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2015-06-15",
      "location": "[resourceGroup().location]",
      "properties": {
        "accountType": "[variables('storageType')]"
      }
    }
  ]
}