{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "Resource Name": {
      "type": "string",
      "defaultValue": "elastic",
      "metadata": {
        "description": "Specify name for the Elastic resource"
      }
    },
    "Location": {
      "type": "string",
      "defaultValue": "West US 2",
      "allowedValues": [
        "France Central",
        "Central US",
        "Australia East",
        "Brazil South",
        "Canada Central",
        "Central India",
        "East US",
        "East US 2",
        "Japan East",
        "North Europe",
        "South Africa North",
        "South Central US",
        "Southeast Asia",
        "UK South",
        "West Europe",
        "West US 2"
      ],
      "metadata": {
        "description": "Specify the region for the resource"
      }
    },
    "Pricing Plan": {
      "type": "string",
      "defaultValue": "Elastic Cloud - Pay as you Go",
      "allowedValues": ["Elastic Cloud - Pay as you Go"],
      "metadata": {
        "description": ""
      }
    }
  },
  "variables": {
    "monitorTags": {},
    "tagRulesProperties": {
      "logRules": {
        "sendSubscriptionLogs": true,
        "sendActivityLogs": true,
        "filteringTags": []
      }
    }
  },
  "resources": [
    {
      "apiVersion": "2023-02-01-preview",
      "name": "[parameters('Resource Name')]",
      "location": "[parameters('Location')]",
      "type": "Microsoft.Elastic/monitors",
      "sku": {
        "name": "ess-monthly-consumption_Monthly@TIDhjdtn7tfnxcy"
      },
      "properties": {
        "userInfo": {
          "emailAddress": null
        }
      },
      "tags": "[variables('monitorTags')]",
      "resources": [
        {
          "apiVersion": "2023-02-01-preview",
          "name": "default",
          "type": "tagRules",
          "dependsOn": [
            "[parameters('Resource Name')]"
          ],
          "properties": "[variables('tagRulesProperties')]"
        }
      ]
    }
  ]
}
