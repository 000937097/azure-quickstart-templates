{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "api_center_name": {
            "defaultValue": "[format('apicenter{0}', uniqueString(resourceGroup().id))]",
            "type": "String"
        },
        "api_name": {
            "defaultValue": "first-api",
            "type": "String"
        },
        "api_type": {
            "defaultValue": "rest",
            "type": "String",
            "allowedValues": [
                "rest",
                "soap",
                "graphql",
                "grpc",
                "webhook",
                "websocket"
            ]   
        }
    },
    "resources": [
        {
            "type": "Microsoft.ApiCenter/services",
            "apiVersion": "2024-03-01",
            "name": "[parameters('api_center_name')]",
            "location": "eastus",
            "sku": {
                "name": "None"
            },
            "properties": {}
        },
        {
            "type": "Microsoft.ApiCenter/services/workspaces",
            "apiVersion": "2024-03-01",
            "name": "[concat(parameters('api_center_name'), '/default')]",
            "dependsOn": [
                "[resourceId('Microsoft.ApiCenter/services', parameters('api_center_name'))]"
            ],
            "properties": {
                "title": "Default workspace",
                "description": "Default workspace"
            }
        },
        {
            "type": "Microsoft.ApiCenter/services/workspaces/apis",
            "apiVersion": "2024-03-01",
            "name": "[concat(parameters('api_center_name'), '/default/', parameters('api_name'))]",
            "dependsOn": [
                "[resourceId('Microsoft.ApiCenter/services/workspaces', parameters('api_center_name'), 'default')]",
                "[resourceId('Microsoft.ApiCenter/services', parameters('api_center_name'))]"
            ],
            "properties": {
                "title": "[parameters('api_name')]",
                "kind": "[parameters('api_type')]",
                "externalDocumentation": [],
                "contacts": [],
                "customProperties": {}
            }
        }
    ]
}