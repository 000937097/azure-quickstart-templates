{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "imageReference": {
      "type": "object",
      "metadata": {
        "description": "imageReference object that should be used to create the virtual machine"
      }
    },
    "osDisk": {
      "type": "object",
      "metadata": {
        "description": "osDisk object that should be used to create the virtual machine"
      }
    },
    "osDiskType": {
      "type": "string",
      "allowedValues": [ "image", "userimage", "osdisk" ],
      "metadata": {
        "description": "The type of OS disk."
      }
    },
    "location": {
      "type": "string",
      "metadata": {
        "description": "Location where the template should be deployed."
      }
    },
    "sidlower": {
      "type": "string",
      "metadata": {
        "description": "SAP System ID in lower case."
      }
    },
    "vmName": {
      "type": "string",
      "metadata": {
        "description": "Prefix of the virtual machine name."
      }
    },
    "vmSize": {
      "type": "string",
      "metadata": {
        "description": "Size of the Virtual Machine."
      }
    },
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "Username for the Virtual Machine."
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Password for the Virtual Machine."
      }
    },
    "storageAccountName": {
      "type": "string",
      "metadata": {
        "description": "Name of the storage account where the os disk and data disk should be placed."
      }
    },
    "nicName": {
      "type": "string",
      "metadata": {
        "description": "Name of the network interface."
      }
    }
  },
  "variables": {
    "osDiskName": "[concat(parameters('sidlower'),'-os.vhd')]",
    "osDiskCaching": "ReadWrite",
    "osProfiles": {
      "image": {
        "osProfile": {
          "computerName": "[parameters('vmName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "imageReference": "[parameters('imageReference')]"
      },
      "userimage": {
        "osProfile": {
          "computerName": "[parameters('vmName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "imageReference": null
      },
      "osdisk": {
        "osProfile": null,
        "imageReference": null
      }
    },
    "internalosProfile": "[variables('osProfiles')[parameters('osDiskType')].osProfile]",
    "internalImageRefernce": "[variables('osProfiles')[parameters('osDiskType')].imageReference]"
  },
  "resources": [
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[parameters('vmName')]",
      "location": "[parameters('location')]",
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('vmSize')]"
        },
        "osProfile": "[variables('internalosProfile')]",
        "storageProfile": {
          "imageReference": "[variables('internalImageRefernce')]",
          "osDisk": "[parameters('osDisk')]",
          "dataDisks": [
            {
              "name": "dbdisk1",
              "lun": 0,
              "vhd": {
                "uri": "[concat('http://',parameters('storageAccountName'),'.blob.core.windows.net/', parameters('vmName'), '/',parameters('sidlower'),'-dbdisk1.vhd')]"
              },
              "createOption": "Empty",
              "caching": "None",
              "diskSizeGB": "512"
            },
            {
              "name": "dbdisk2",
              "lun": 1,
              "vhd": {
                "uri": "[concat('http://',parameters('storageAccountName'),'.blob.core.windows.net/', parameters('vmName'), '/',parameters('sidlower'),'-dbdisk2.vhd')]"
              },
              "createOption": "Empty",
              "caching": "None",
              "diskSizeGB": "512"
            },
            {
              "name": "dbdisk3",
              "lun": 2,
              "vhd": {
                "uri": "[concat('http://',parameters('storageAccountName'),'.blob.core.windows.net/', parameters('vmName'), '/',parameters('sidlower'),'-dbdisk3.vhd')]"
              },
              "createOption": "Empty",
              "caching": "None",
              "diskSizeGB": "128"
            }
          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('nicName'))]"
            }
          ]
        }
      }
    }
  ],
  "outputs": {
    "dbDataLUNs": {
      "value": "0,1",
      "type": "string"
    },
    "dbLogLUNs": {
      "value": "2",
      "type": "string"
    }
  }
}
