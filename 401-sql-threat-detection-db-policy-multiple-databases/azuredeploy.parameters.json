{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "serverName": {
      "value": "GEN-UNIQUE",
      "metadata": {
        "description": "Name for the SQL server"
      }
    },
    "databaseNames": {
      "value": [ "GEN-UNIQUE", "GEN-UNIQUE" ],
      "metadata": {
        "description": "Array of names for the SQL databases"
      }
    },
    "adminUser": {
      "value": "GEN-USER",
      "metadata": {
        "description": "Username for admin"
      }
    },
    "adminPassword": {
      "value": "GEN-PASSWORD",
      "metadata": {
        "description": "Password for admin"
      }
    },
    "emailAddresses": {
      "value": [ "GEN-UNIQUE@GEN-UNIQUE.com", "GEN-UNIQUE@GEN-UNIQUE.com" ],
      "metadata": {
        "description": "Array of email addresses to receive alerts, each corresponding to its appropriate database (by index in the array)"
      }
    }
  }
}