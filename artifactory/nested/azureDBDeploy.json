// 20170915180133
// https://raw.githubusercontent.com/jainishshah17/azure-quickstart-templates/master/sonarqube-azuresql/nested/azureDBDeploy.json

{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "db_user": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "artifactory"
    },
    "db_password": {
      "type": "securestring",
      "defaultValue": "password"
    },
    "db_server": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "artifactoryDB"
    },
    "db_name": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "artdb"
    },
    "db_edition": {
      "type": "string",
      "allowedValues": [
        "Basic",
        "Standard",
        "Premium"
      ]
    }
  },
  "variables": {
    "apiVersion": "2014-04-01"
  },
  "resources": [
    {
      "name": "[parameters('db_server')]",
      "type": "Microsoft.Sql/servers",
      "kind": "v12.0",
      "location": "[resourceGroup().location]",
      "apiVersion": "2014-04-01",
      "dependsOn": [
        
      ],
      "tags": {
        "displayName": "artifactoryDB"
      },
      "properties": {
        "administratorLogin": "[parameters('db_user')]",
        "administratorLoginPassword": "[parameters('db_password')]",
        "version": "12.0"
      },
      "resources": [
        {
          "name": "[uniqueString(parameters('db_server'), 'AllowAllWindowsAzureIps' )]",
          "type": "firewallrules",
          "location": "[resourceGroup().location]",
          "apiVersion": "2014-04-01",
          "dependsOn": [
            "[concat('Microsoft.Sql/servers/', parameters('db_server'))]"
          ],
          "properties": {
            "startIpAddress": "0.0.0.0",
            "endIpAddress": "0.0.0.0"
          }
        },
        {
          "name": "[parameters('db_name')]",
          "type": "databases",
          "kind": "v12.0,user",
          "location": "[resourceGroup().location]",
          "apiVersion": "2014-04-01",
          "dependsOn": [
            "[parameters('db_server')]"
          ],
          "tags": {
            "displayName": "artifactoryDB"
          },
          "properties": {
            "edition": "[parameters('db_edition')]",
            "maxSizeBytes": "1073741824"
          }
        }
      ]
    }
  ],
  "outputs": {
    "jdbcConnString": {
      "type": "string",
      "value": "[concat('jdbc:sqlserver://', reference(concat('Microsoft.Sql/servers/', parameters('db_server'))).fullyQualifiedDomainName, ':1434;database=', parameters('db_name'), ';user=', parameters('db_user'), '@', parameters('db_server'), ';password=' )]"
    }
  }
}
