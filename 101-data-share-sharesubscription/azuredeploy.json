{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "accounts_template_consumer_name": {
            "defaultValue": "template_consumer",
            "type": "String"
        },
        "principalId": {
            "type": "String"
        },
        "tenantId": {
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.DataShare/accounts",
            "apiVersion": "2019-11-01",
            "name": "[parameters('accounts_template_consumer_name')]",
            "location": "eastus",
            "identity": {
                "principalId": "[parameters('principalId')]",
                "tenantId": "[parameters('tenantId')]",
                "type": "SystemAssigned"
            },
            "properties": {}
        },
        {
            "type": "Microsoft.DataShare/accounts/shareSubscriptions",
            "apiVersion": "2019-11-01",
            "name": "[concat(parameters('accounts_template_consumer_name'), '/sharesubscription')]",
            "dependsOn": [
                "[resourceId('Microsoft.DataShare/accounts', parameters('accounts_template_consumer_name'))]"
            ],
            "properties": {
                "invitationId": "5fbf7786-a688-48ad-aefd-45da4627d253",
                "sourceShareLocation": "eastus"
            }
        }
    ]
}