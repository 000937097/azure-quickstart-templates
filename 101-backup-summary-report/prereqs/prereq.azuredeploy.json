{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspaceName": {
      "type": "string"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    }
  },
  "variables": {
    "sku": "pergb2018",
    "tags": {
      "UsedByArmTemplateTest": "true"
    }
  },
  "resources": [
    {
      "apiVersion": "2020-08-01",
      "name": "[parameters('workspaceName')]",
      "location": "[parameters('location')]",
      "tags": "[variables('tags')]",
      "type": "Microsoft.OperationalInsights/workspaces",
      "properties": {
        "sku": {
          "name": "[variables('sku')]"
        }
      }
    }
  ],
  "outputs": {
    "existingLogicAppWorkspace": {
      "type": "string",
      "value": "[parameters('workspaceName')]"
    },
    "existingWorkspaceResourceGroupId": {
      "type": "string",
      "value": "[resourceGroup().id]"
    },
    "existingWorkspacesToQuery": {
      "type": "array",
      "value": "[array(concat(resourceGroup().id,'/providers/Microsoft.OperationalInsights/workspaces/', parameters('workspaceName')))]"
    }
  }
}