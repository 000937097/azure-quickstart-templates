{
    "handler": "Microsoft.Compute.MultiVm",
    "version": "0.0.1-preview",
    "parameters": {
        "basics": [
            {
                "name": "webSiteName",
                "type": "Microsoft.Common.TextBox",
                "label": "Web site URL",
                "toolTip": "Full url will be your_web_site_name.azurewebsites.net",
                "constraints": {
                    "required": true,
                    "regex": "^[a-z0-9A-Z]{1,30}$",
                    "validationMessage": "Only alphanumeric characters are allowed, and the value must be 1-30 characters long."
                }
            }
        ],
        "steps": [
            {
                "name": "wordpressInfo",
                "label": "WordPress information",
                "subLabel": {
                    "preValidation": "Provide WordPress information",
                    "postValidation": "Done"
                },
                "bladeTitle": "WordPress information",
                "elements": [
                    {
                        "name": "sku",
                        "type": "Microsoft.Common.DropDown",
                        "label": "Web site SKU",
                        "defaultValue": "Standard",
                        "toolTip": "",
                        "constraints": {
                            "allowedValues": [
                                {
                                    "label": "Free",
                                    "value": "Free"
                                },
                                {
                                    "label": "Shared",
                                    "value": "Shared"
                                },
                                {
                                    "label": "Basic",
                                    "value": "Basic"
                                },
                                {
                                    "label": "Standard",
                                    "value": "Standard"
                                },
                                {
                                    "label": "Premium",
                                    "value": "Premium"
                                }
                            ],
                            "required": true
                        }
                    },
                    {
                        "name": "workerSize",
                        "type": "Microsoft.Common.DropDown",
                        "label": "Web site worker size",
                        "defaultValue": "1",
                        "toolTip": "",
                        "constraints": {
                            "allowedValues": [
                                {
                                    "label": "0",
                                    "value": "0"
                                },
                                {
                                    "label": "1",
                                    "value": "1"
                                },
                                {
                                    "label": "2",
                                    "value": "2"
                                }
                            ],
                            "required": true
                        }
                    },
                    {
                        "name": "wpDBUser",
                        "type": "Microsoft.Compute.UserNameTextBox",
                        "label": "web site db user name",
                        "defaultValue": "",
                        "toolTip": "",
                        "constraints": {
                            "required": true
                        },
                        "osPlatform": "Linux"
                    },
                    {
                        "name": "wpDBPassword",
                        "type": "Microsoft.Common.PasswordBox",
                        "label": {
                            "password": "Web site db user password",
                            "confirmPassword": "Confirm password"
                        },
                        "toolTip": "web site db user password, also used for WebDeploy authentication",
                        "constraints": {
                            "required": true,
                            "regex": "",
                            "validationMessage": ""
                        },
                        "options": {
                            "hideConfirmation": false
                        }
                    }
                ]
            },
            {
                "name": "databaseCluster",
                "label": "Database cluster information",
                "subLabel": {
                    "preValidation": "Provide database cluster information",
                    "postValidation": "Done"
                },
                "bladeTitle": "Database cluster information",
                "elements": [
                    {
                        "name": "dbDNSName",
                        "type": "Microsoft.Network.PublicIpAddressCombo",
                        "label": {
                            "publicIpAddress": "New public IP name",
                            "domainNameLabel": "Domain name for MySQL"
                        },
                        "toolTip": {
                            "publicIpAddress": "Only new public IP is supported",
                            "domainNameLabel": "MySQL will be accessible from port 3306 of this domain"
                        },
                        "defaultValue": {
                            "publicIpAddressName": "mysqlIP01",
                            "domainNameLabel": ""
                        },
                        "constraints": {
                            "required": true
                        },
                        "options": {
                            "hideNone": true,
                            "hideDomainNameLabel": false
                        }
                    },
                    {
                        "name": "vmSize",
                        "type": "Microsoft.Compute.SizeSelector",
                        "label": "Size",
                        "toolTip": "",
                        "recommendedSizes": [
                            "Standard_D2",
                            "Standard_DS2",
                            "Standard_D3",
                            "Standard_DS3"
                        ],
                        "constraints": {
                            "required": true
                        },
                        "osPlatform": "Linux",
                        "imageReference": {
                            "publisher": "OpenLogic",
                            "offer": "CentOS",
                            "sku": "6.6"
                        },
                        "count": 2
                    },
                    {
                        "name": "storageAccount",
                        "type": "Microsoft.Storage.StorageAccountSelector",
                        "label": "New storage account",
                        "toolTip": "Storage account for the database VMs, only new storage account is supported",
                        "defaultValue": {
                            "name": "mysqlstore01",
                            "type": "Standard_LRS"
                        },
                        "constraints": {
                            "allowedTypes": [
                                "Standard_LRS",
                                "Premium_LRS"
                            ],
                            "required": true
                        }
                    },
                    {
                        "name": "vmUsername",
                        "type": "Microsoft.Compute.UserNameTextBox",
                        "label": "VM user name",
                        "defaultValue": "",
                        "toolTip": "",
                        "constraints": {
                            "required": true
                        },
                        "osPlatform": "Linux"
                    },
                    {
                        "name": "vmPassword",
                        "type": "Microsoft.Common.PasswordBox",
                        "label": {
                            "password": "VM Password",
                            "confirmPassword": "Confirm password"
                        },
                        "toolTip": "",
                        "constraints": {
                            "required": true,
                            "regex": "",
                            "validationMessage": ""
                        },
                        "options": {
                            "hideConfirmation": false
                        }
                    },
                    {
                        "name": "mysqlPassword",
                        "type": "Microsoft.Common.PasswordBox",
                        "label": {
                            "password": "MySQL Password",
                            "confirmPassword": "Confirm password"
                        },
                        "toolTip": "",
                        "constraints": {
                            "required": true,
                            "regex": "",
                            "validationMessage": ""
                        },
                        "options": {
                            "hideConfirmation": false
                        }
                    }
                ]
            },
            {
                "name": "networkInfo",
                "label": "Virtual network information",
                "subLabel": {
                    "preValidation": "Provide virtual network information",
                    "postValidation": "Done"
                },
                "bladeTitle": "Virtual network information",
                "elements": [
                    {
                        "name": "vnetName",
                        "type": "Microsoft.Common.TextBox",
                        "label": "Virtual network name",
                        "toolTip": "",
                        "defaultValue": "appServiceVNet",
                        "constraints": {
                            "required": true,
                            "regex": "^[a-z0-9A-Z]{1,30}$",
                            "validationMessage": "Only alphanumeric characters are allowed, and the value must be 1-30 characters long."
                        }
                    },
                    {
                        "name": "vnetIPRange",
                        "type": "Microsoft.Common.TextBox",
                        "label": "Virtual network IP range",
                        "toolTip": "",
                        "defaultValue": "10.0.0.0/16",
                        "constraints": {
                            "required": true,
                            "regex": "",
                            "validationMessage": ""
                        }
                    },
                    {
                        "name": "dbsubnetName",
                        "type": "Microsoft.Common.TextBox",
                        "label": "Database subnet name",
                        "toolTip": "",
                        "defaultValue": "dbSubnet",
                        "constraints": {
                            "required": true,
                            "regex": "^[a-z0-9A-Z]{1,30}$",
                            "validationMessage": "Only alphanumeric characters are allowed, and the value must be 1-30 characters long."
                        }
                    },
                    {
                        "name": "subnetIPRange",
                        "type": "Microsoft.Common.TextBox",
                        "label": "Database subnet IP range",
                        "toolTip": "",
                        "defaultValue": "10.0.0.0/24",
                        "constraints": {
                            "required": true,
                            "regex": "",
                            "validationMessage": ""
                        }
                    },
                    {
                        "name": "vmIPPrefix",
                        "type": "Microsoft.Common.TextBox",
                        "label": "Database VM IP prefix",
                        "toolTip": "First 3 fields of db subnet IP address and a dot, for example, 10.0.0.",
                        "defaultValue": "10.0.0.",
                        "constraints": {
                            "required": true,
                            "regex": "",
                            "validationMessage": "Must be first 3 fields of IP address"
                        }
                    },
                    {
                        "name": "vmIPStartAddress",
                        "type": "Microsoft.Common.TextBox",
                        "label": "Database VM start IP address",
                        "toolTip": "Last field of the IP address for the first db VM, for example, 4 for 10.0.0.4",
                        "defaultValue": "4",
                        "constraints": {
                            "required": true,
                            "regex": "^[0-9]{1,3}$",
                            "validationMessage": "Must be numeric value."
                        }
                    }
                ]
            }
        ],
        "outputs": {
            "siteName": "[basics('webSiteName')]",
            "hostingPlanName": "[basics('webSiteName')]",
            "sku": "[steps('wordpressInfo').sku]",
            "workerSize": "[steps('wordpressInfo').workerSize]",
            "wpDbUsername": "[steps('wordpressInfo').wpDBUser]",
            "wpDbPassword": "[steps('wordpressInfo').wpDBPassword]",
            "webDeploy_AuthenticationKey": "[steps('wordpressInfo').wpDBPassword]",
            "webDeploy_SecureAuthenticationKey": "[steps('wordpressInfo').wpDBPassword]",
            "webDeploy_LoggedInKey": "[steps('wordpressInfo').wpDBPassword]",
            "webDeploy_NonceKey": "[steps('wordpressInfo').wpDBPassword]",
            "webDeploy_AuthenticationSalt": "[steps('wordpressInfo').wpDBPassword]",
            "webDeploy_SecureAuthenticationSalt": "[steps('wordpressInfo').wpDBPassword]",
            "webDeploy_LoggedInSalt": "[steps('wordpressInfo').wpDBPassword]",
            "webDeploy_NonceSalt": "[steps('wordpressInfo').wpDBPassword]",
            "dnsName": "[steps('databaseCluster').dbDNSName.domainNameLabel]",
            "publicIPName": "[steps('databaseCluster').dbDNSName.name]",
            "vmUserName": "[steps('databaseCluster').vmUsername]",
            "vmPassword": "[steps('databaseCluster').vmPassword]",
            "vmSize": "[steps('databaseCluster').vmSize]",
            "storageAccountType": "[steps('databaseCluster').storageAccount.type]",
            "storageAccountName": "[steps('databaseCluster').storageAccount.name]",
            "mysqlRootPassword": "[steps('databaseCluster').mysqlPassword]",
            "mysqlReplicationPassword": "[steps('databaseCluster').mysqlPassword]",
            "mysqlProbePassword": "[steps('databaseCluster').mysqlPassword]",
            "virtualNetworkName": "[steps('networkInfo').vnetName]",
            "dbSubnetName": "[steps('networkInfo').dbsubnetName]",
            "vnetAddressPrefix": "[steps('networkInfo').vnetIPRange]",
            "dbSubnetAddressPrefix": "[steps('networkInfo').subnetIPRange]",
            "vmIPPrefix": "[steps('networkInfo').vmIPPrefix]",
            "vmIPStartAddress": "[steps('networkInfo').vmIPStartAddress]"
        }
    }
}