{
    "handler": "Microsoft.Compute.MultiVm",
    "version": "0.0.1-preview",
    "parameters": {
        "basics": [
            {
                "name": "webSiteName",
                "type": "Microsoft.Common.TextBox",
                "label": "Web site URL",
                "toolTip": "Full url will be (webSiteName).azurewebsites.net",
                "constraints": {
                    "required": true,
                    "regex": "^[a-z0-9A-Z]{1,30}$",
                    "validationMessage": "Only alphanumeric characters are allowed, and the value must be 1-30 characters long."
                }
            },
            {
                "name": "dbDNSName",
                "type": "Microsoft.Common.TextBox",
                "label": "Database DNS",
                "toolTip": "MySQL will be accessible from (DatabaseDNS).(location).cloudapp.azure.com:3306",
                "constraints": {
                    "required": true,
                    "regex": "^[a-z0-9A-Z]{1,30}$",
                    "validationMessage": "Only alphanumeric characters are allowed, and the value must be 1-30 characters long."
                }
            }
        ],
        "steps": [
            {
                "name": "databaseCluster",
                "label": "Database cluster information",
                "subLabel": {
                    "preValidation": "Provide database cluster information",
                    "postValidation": "Done"
                },
                "bladeTitle": "Database cluster information",
                "elements": [
                    {
                        "name": "vmSize",
                        "type": "Microsoft.Compute.SizeSelector",
                        "label": "Size",
                        "toolTip": "",
                        "recommendedSizes": [
                            "Standard_DS1",
                            "Standard_DS2",
                            "Standard_DS3"
                        ],
                        "constraints": {
                            "required":  true
                        },
                        "osPlatform": "Linux",
                        "imageReference": {
                            "publisher": "OpenLogic",
                            "offer": "CentOS",
                            "sku": "6.6"
                        },
                        "count": 2
                    },
                    {
                        "name": "storageAccountType",
                        "type": "Microsoft.Storage.StorageAccountSelector",
                        "label": "Storage account",
                        "toolTip": "Storage account for the database VMs",
                        "defaultValue": {
                            "type": "Premium_LRS"
                          },
                        "constraints": {
                            "required": true
                        }
                    },
                    {
                        "name": "vmUsername",
                        "type": "Microsoft.Compute.UserNameTextBox",
                        "label": "VM user name",
                        "defaultValue": "",
                        "toolTip": "",
                        "constraints": {
                            "required": true
                        },
                        "osPlatform": "Linux"
                    },
                    {
                        "name": "vmPassword",
                        "type": "Microsoft.Common.PasswordBox",
                        "label": {
                            "password": "VM Password",
                            "confirmPassword": "Confirm password"
                        },
                        "toolTip": "",
                        "constraints": {
                            "required": true,
                            "regex": "",
                            "validationMessage": ""
                        },
                        "options": {
                            "hideConfirmation": false
                        }
                    }
                ]
            },
            {
                "name": "databaseCredentials",
                "label": "Database credentials",
                "subLabel": {
                    "preValidation": "Provide database credentials",
                    "postValidation": "Done"
                },
                "bladeTitle": "Database credentials",
                "elements": [
                    {
                        "name": "mysqlPassword",
                        "type": "Microsoft.Common.PasswordBox",
                        "label": {
                            "password": "MySQL Password",
                            "confirmPassword": "Confirm password"
                        },
                        "toolTip": "",
                        "constraints": {
                            "required": true,
                            "regex": "",
                            "validationMessage": ""
                        },
                        "options": {
                            "hideConfirmation": false
                        }
                    },
                    {
                        "name": "wpDBUser",
                        "type": "Microsoft.Compute.UserNameTextBox",
                        "label": "web site db user name",
                        "defaultValue": "",
                        "toolTip": "",
                        "constraints": {
                            "required": true
                        },
                        "osPlatform": "Linux"
                    },
                    {
                        "name": "wpDBPassword",
                        "type": "Microsoft.Common.PasswordBox",
                        "label": {
                            "password": "Web site db user password",
                            "confirmPassword": "Confirm password"
                        },
                        "toolTip": "web site db user password, also used for MySQL replication, probe and WebDeploy authentication",
                        "constraints": {
                            "required": true,
                            "regex": "",
                            "validationMessage": ""
                        },
                        "options": {
                            "hideConfirmation": false
                        }
                    }
                ]
            }
        ],
        "outputs": {
            "siteName": "[basics('webSiteName')]",
            "dnsName": "[basics('dbDNSName')]",
            "hostingPlanName": "[basics('dbDNSName')]",
            "webDeploy_AuthenticationKey": "[steps('databaseCredentials').wpDBPassword]",
            "webDeploy_SecureAuthenticationKey": "[steps('databaseCredentials').wpDBPassword]",
            "webDeploy_LoggedInKey": "[steps('databaseCredentials').wpDBPassword]",
            "webDeploy_NonceKey": "[steps('databaseCredentials').wpDBPassword]",
            "webDeploy_AuthenticationSalt": "[steps('databaseCredentials').wpDBPassword]",
            "webDeploy_SecureAuthenticationSalt": "[steps('databaseCredentials').wpDBPassword]",
            "webDeploy_LoggedInSalt": "[steps('databaseCredentials').wpDBPassword]",
            "webDeploy_NonceSalt": "[steps('databaseCredentials').wpDBPassword]",
            "vmUserName": "[steps('databaseCluster').vmUsername]",
            "vmPassword": "[steps('databaseCluster').vmPassword]",
            "mysqlRootPassword": "[steps('databaseCredentials').mysqlPassword]",
            "mysqlReplicationPassword": "[steps('databaseCredentials').wpDBPassword]",
            "mysqlProbePassword": "[steps('databaseCredentials').wpDBPassword]",
            "wpDbPassword": "[steps('databaseCredentials').wpDBPassword]"
        }
    }
}