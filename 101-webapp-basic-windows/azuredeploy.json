{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
      "webAppName": {
          "type": "string",
          "metadata": {
              "description": "Web app name"
          },
          "minLength": 2
      },
      "location": {
          "type": "string",
          "defaultValue": "[resourceGroup().location]",
          "metadata": {
              "description": "Location for all resources"
          }
      },
      "sku": {
          "type": "string",
          "defaultValue": "F1",
          "metadata": {
              "description": "The SKU of App Service Plan "
          }
      },
      "language": {
          "type": "string",
          "defaultValue": "default",
          "metadata": {
              "description": "The language stack of the app. Default = siteConfig. Java = javaSiteConfig. See objects below. "
          }
      },
      "siteConfig": {
          "type": "object",
          "defaultValue": {
              "phpVersion": "7.4",
              "appSettings": [
                  {
                      "name": "WEBSITE_NODE_DEFAULT_VERSION",
                      "value": "12.15.0"
                  }
              ]
          },
          "metadata": {
              "description": "Default site config for .net core, .net framework, PHP, and Node.js"
          }
      },
      "javaSiteConfig": {
          "type": "object",
          "defaultValue": {
              "javaVersion": "1.8",
              "javaContainer": "TOMCAT",
              "javaContainerVersion": "9.0"
          },
          "metadata": {
              "description": "Default site config for Java"
          }
      }
  },
  "variables": {
      "appServicePlanPortalName": "[concat('AppServicePlan-', parameters('webAppName'))]"
  },
  "resources": [
      {
          "apiVersion": "2019-08-01",
          "type": "Microsoft.Web/serverfarms",
          "name": "[variables('appServicePlanPortalName')]",
          "location": "[parameters('location')]",
          "sku": {
              "name": "[parameters('sku')]"
          }
      },
      {
          "apiVersion": "2019-08-01",
          "type": "Microsoft.Web/sites",
          "kind": "app",
          "name": "[parameters('webAppName')]",
          "location": "[parameters('location')]",
          "properties": {
              "siteConfig": "[if( equals(parameters('language'),'java'),parameters('javaSiteConfig'),parameters('siteConfig') )]",
              "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanPortalName'))]"
          },
          "dependsOn": [
              "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanPortalName'))]"
          ]
      }
  ]
}