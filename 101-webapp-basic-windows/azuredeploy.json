{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "webAppName": {
            "type": "string",
            "defaultValue": "[concat(parameters('webAppName-'), uniqueString(resourceGroup().id))]",
            "metadata": {
                "description": "Web app name."
            },
            "minLength": 2
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources."
            }
        },
        "sku": {
            "type": "string",
            "defaultValue": "F1",
            "metadata": {
                "description": "The SKU of App Service Plan."
            }
        },
        "language": {
            "type": "string",
            "defaultValue": ".net",
            "allowedValues": [
                ".net",
                "php",
                "node",
                "html"
            ],
            "metadata": {
                "description": "The language stack of the app."
            }
        },
        "repoURL": {
            "type": "string",
            "defaultValue": "https://github.com/Azure-Samples/app-service-web-dotnet-get-started",
            "metadata": {
                "description": "The URL for the GitHub repository that contains the project to deploy."
            }
        },
        "branch": {
            "type": "string",
            "defaultValue": "master",
            "metadata": {
                "description": "The branch of the GitHub repository to use."
            }
        }
    },
    "variables": {
        "appServicePlanPortalName": "[concat('AppServicePlan-', parameters('webAppName'))]",
        "gitRepo":"[variables('gitRepoReference')[toLower(parameters('language'))]]",
        "gitRepoReference":{
            ".net":"https://github.com/Azure-Samples/app-service-web-dotnet-get-started",
            "node":"https://github.com/Azure-Samples/nodejs-docs-hello-world",
            "php":"https://github.com/Azure-Samples/php-docs-hello-world",
            "html":"https://github.com/Azure-Samples/html-docs-hello-world"
        },
        "configuration": "[variables('configReference')[toLower(parameters('language'))]]",
        "configReference": {
            ".net": {
                "type": "object",
                "defaultValue": {},
                "metadata": {
                    "description": "Site config for .NET core, .NET framework."
                }
            },
            "html": {
                "type": "object",
                "defaultValue": {},
                "metadata": {
                    "description": "Site config for static HTML app."
                }
            },            
            "node": {
                "type": "object",
                "defaultValue": {
                    "appSettings": [
                        {
                            "name": "WEBSITE_NODE_DEFAULT_VERSION",
                            "value": "12.15.0"
                        }
                    ]
                },
                "metadata": {
                    "description": "Site config for Node.js."
                }
            },
            "php": {
                "type": "object",
                "defaultValue": {
                    "phpVersion": "7.4"
                },
                "metadata": {
                    "description": "Site config for PHP."
                }
            }
        }
    },
    "resources": [
        {
            "apiVersion": "2019-08-01",
            "type": "Microsoft.Web/serverfarms",
            "name": "[variables('appServicePlanPortalName')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "[parameters('sku')]"
            }
        },
        {
            "apiVersion": "2019-08-01",
            "type": "Microsoft.Web/sites",
            "kind": "app",
            "name": "[parameters('webAppName')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanPortalName'))]"
            ],
            "properties": {
                "siteConfig": "[variables('configuration')]",
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanPortalName'))]"
            },
            "resources": [
                {
                    "type": "sourcecontrols",
                    "apiVersion": "2019-08-01",
                    "name": "web",
                    "location": "[parameters('location')]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/sites', parameters('webAppName'))]"
                    ],
                    "properties": {
                        "repoUrl": "[variables('gitRepo')]",
                        "branch": "[parameters('branch')]",
                        "isManualIntegration": true
                    }
                }
            ]
        }
    ]
}