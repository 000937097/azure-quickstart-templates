{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
	    "DNSRecordstoCreate": {
      "type": "string",
      "defaultValue": "Both",
      "allowedValues": [
        "Mail",
        "SfB"
      ],
      "metadata": {
        "description": "Identifies whether to use new or existing Storage Account"
      }
    },
        "DNSzoneName": {
            "type": "string",
            "metadata": {
                "description": "Name of the DNS Zone"
            }
        },
        "TTL": {
            "type": "int",
            "defaultValue": "3600",
            "metadata": {
                "description": "Time to live value in seconds"
            }
        },
        "artifactsBaseUrl": {
            "type": "string",
            "defaultValue": "https://raw.githubusercontent.com/georgewallace/azure-quickstart-templates/master/dns-recods-office365",
            "metadata": {
                "description": "base url"
            }
        }

    },
    "variables": {
        "mx": "[concat(replace(parameters('DNSzoneName'),'.','-'),'.mail.protection.outlook.com')]",
        "apiVersion": "2016-04-01",
		"DNSRerecordsSetupURL": "[concat(parameters('artifactsBaseUrl'),'/',parameters('DNSRecordstoCreate'),'.json')]"
    
    },
	  "resources": [
    {
      "name": "SettingUpDNSRecods",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('DNSRerecordsSetupURL')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "DNSzoneName": {
            "value": "[parameters('DNSzoneName')]"
          },
          "TTL": {
            "value": "[parameters('TTL')]"
          }
        }
      }
    }
         ]
}