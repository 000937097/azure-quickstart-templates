{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "dnsZoneName": {
      "type": "string",
      "metadata": {
        "description": "Name of the DNS Zone"
      }
    },
    "ttl": {
      "type": "int",
      "defaultValue": "3600",
      "metadata": {
        "description": "Time to live value in seconds"
      }
    },
    "artifactsBaseUrl": {
      "type": "string",
      "defaultValue": "https://raw.githubusercontent.com/georgewallace/azure-quickstart-templates/master/dns-records-office365",
      "metadata": {
        "description": "Base URL for the child template files"
      }
    },
    "recordTypes": {
      "type": "array",
      "defaultValue": [
        "mail",
        "mdm",
        "sfb"
      ],
      "metadata": {
        "description": "An array that defines the resources to create, acceptable values are (mail,mdm,sfb)."
      }
    }
  },
  "variables": {
    "apiVersion": "2016-04-01"
  },
  "resources": [
    {
      "apiVersion": "[variables('apiVersion')]",
      "type": "Microsoft.Network/dnszones",
      "name": "[parameters('DNSzoneName')]",
      "location": "global"
    },
    {
      "name": "[concat('SettingUpDNSRecods','-',parameters('recordTypes')[copyIndex()])]",
      "type": "Microsoft.Resources/deployments",
      "copy": {
        "name": "recordcopies",
        "count": "[length(parameters('recordTypes'))]"
      },
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "[resourceId('Microsoft.Network/dnszones', parameters('DNSzoneName'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('artifactsBaseUrl'),'/',parameters('recordTypes')[copyIndex()],'.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "dnsZoneName": {
            "value": "[parameters('dnsZoneName')]"
          },
          "ttl": {
            "value": "[parameters('ttl')]"
          },
                    "apiVersion": {
            "value": "[variables('apiVersion')]"
          }
        }
      }
    }
  ],
  "outputs": 
    {
  "return": {
    "type": "string",
    "value": "[parameters('artifactsBaseUrl')]"
  }
    }
}