{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
	    "DNSRecordstoCreate": {
      "type": "string",
      "defaultValue": "both",
      "allowedValues": [
        "mail",
        "skype",
        "both"
      ],
      "metadata": {
        "description": "Identifies whether to use new or existing Storage Account"
      }
    },
        "DNSzoneName": {
            "type": "string",
            "metadata": {
                "description": "Name of the DNS Zone"
            }
        },
        "TTL": {
            "type": "int",
            "defaultValue": "3600",
            "metadata": {
                "description": "Time to live value in seconds"
            }
        },
        "artifactsBaseUrl": {
            "type": "string",
            "defaultValue": "https://raw.githubusercontent.com/georgewallace/azure-quickstart-templates/master/dns-records-office365",
            "metadata": {
                "description": "base url"
            }
        },
	    "Types": {
      "type": "array",
      "defaultValue": [
        "mail",
        "mdm",
        "sfb"
      ],
      "metadata": {
        "description": "Identifies whether to use new or existing Storage Account"
      }
    }
    },
    "variables": {
        "mx": "[concat(replace(parameters('DNSzoneName'),'.','-'),'.mail.protection.outlook.com')]",
        "apiVersion": "2016-04-01",
		"DNSRerecordsSetupURL": "[concat(parameters('artifactsBaseUrl'),'/',parameters('DNSRecordstoCreate'),'.json')]"   
    },
	  "resources": [
    {
      "name": "[concat('SettingUpDNSRecods','-',parameters('Types')[copyIndex()])]",
      "type": "Microsoft.Resources/deployments",
            "copy": {
      "name": "recordcopys",

"count": "[length(parameters('Types'))]"
      },
      "apiVersion": "2015-01-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('artifactsBaseUrl'),'/',parameters('Types')[copyIndex()],'.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "DNSzoneName": {
            "value": "[parameters('DNSzoneName')]"
          },
          "TTL": {
            "value": "[parameters('TTL')]"
          }
        }
      }
    }
         ],
         "outputs": {
           "return": {
           "type": "int",
           "value": "[length(parameters('Types'))]"
         }
}
}