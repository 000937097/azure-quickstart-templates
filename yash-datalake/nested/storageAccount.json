{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "storageAccountName": {
      "type": "string",
      "metadata": {
        "description": "Unique Storage Account Name"
      }
    },
    "location": {
      "type": "string",
      "metadata": {
        "description": "The location in which the resources will be created."
      }
    },
    "storageAccountType": {
      "type": "string",
      "allowedValues": [
        "Standard_LRS",
        "Standard_GRS",
        "Standard_ZRS",
        "Premium_LRS"
      ],
      "metadata": {
        "description": "Storage Account type"
      }
    },
    "keyVaultName": {
      "type": "string",
      "metadata": {
        "description": "Specifies the name of the key vault."
      }
    }
  },
  "variables": {
    "location": "[parameters('location')]",
    "rgName": "[resourcegroup().name]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[parameters('storageAccountName')]",
      "apiVersion": "2018-02-01",
      "properties": {
        "accessTier": "Cool"
      },
      "location": "[variables('location')]",
      "sku": {
        "name": "[parameters('storageAccountType')]"
      },
      "kind": "StorageV2"
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "name": "clientAzureStorageConnectionString",
      "apiVersion": "2018-02-14",
      "location": "[parameters('location')]",
      "properties": {
        "value": "[Concat('DefaultEndpointsProtocol=https;AccountName=',parameters('storageAccountName'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName')),'2018-07-01').keys[0].value)]"
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "name": "accessKey",
      "apiVersion": "2018-02-14",
      "location": "[parameters('location')]",
      "properties": {
        "value": "[listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName')),'2018-07-01').keys[0].value]"
      }
    }
  ],
  "outputs": {
    "clientAzureStorageConnectionString": {
      "reference": {
        "keyVault": {
          "id": "[resourceId(variables('rgName'), 'Microsoft.KeyVault/vaults', parameters('keyVaultName'))]"
        },
        "secretName": "NamespaceConnectionString"
      }
    },
    "accessKey": {
      "reference": {
        "keyVault": {
          "id": "[resourceId(variables('rgName'), 'Microsoft.KeyVault/vaults', parameters('keyVaultName'))]"
        },
        "secretName": "SharedAccessPolicyPrimaryKey"
      }
    }
  }
}
