{
	"$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"location": {
			"type": "string"
		},
		"virtualMachineNames": {
			"type": "array"
		},
		"ResourceGroup": {
			"type": "string"
		},
		"GroupResourceId": {
			"type": "string"
		},
		"DomainAccountPassword": {
			"type": "securestring"
		},
		"SQLServicePassword": {
			"type": "securestring"
		}
	},
	"variables": {		
	},
	"resources": [{
		"name": "[trim(parameters('virtualMachineNames')[copyIndex()])]",
		"type": "Microsoft.SqlVirtualMachine/SqlVirtualMachines",
		"apiVersion": "2017-03-01-preview",
		"location": "[parameters('Location')]",
		"copy": {
			"name": "vmToClusterLoop",
			"count": "[length(parameters('virtualMachineNames'))]"
		},
		"properties": {
			"virtualMachineResourceId": "[resourceId(parameters('ResourceGroup'),'Microsoft.Compute/virtualMachines', trim(parameters('virtualMachineNames')[copyIndex()]))]",
			"SqlVirtualMachineGroupResourceId": "[parameters('GroupResourceId')]",
			"WSFCDomainCredentials": {
				"ClusterBootstrapAccountPassword": "[parameters('DomainAccountPassword')]",
				"ClusterOperatorAccountPassword": "[parameters('DomainAccountPassword')]",
				"SqlServiceAccountPassword": "[parameters('SqlServicePassword')]"
			}
		}
	}]
}