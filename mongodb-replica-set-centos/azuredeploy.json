{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "replSetName": {
      "type": "string",
      "defaultValue": "repset",
      "metadata": {
        "description": "Name of the replica set provisioned for the MongoDB replica set cluster. The MongoDB nodes who have the same replica set name will be in the same replica set cluster."
      }
    },
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "Administrator user name used when provisioning virtual machines"
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Administrator password used when provisioning virtual machines"
      }
    },
	"mongoAdminUsername": {
      "type": "string",
      "metadata": {
        "description": "MongoDB Administrator user name used when provisioning MongoDB replica set"
      }
    },
    "mongoAdminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "MongoDB Administrator password used when provisioning MongoDB replica set"
      }
    },
    "dnsNamePrefix": {
      "type": "string",
      "metadata": {
        "description": "DNS Name for the publicly accessible primary node. Must be lowercase. It should match with the following regular expression: ^[a-z][a-z0-9-]{1,61}[a-z0-9]$ or it will raise an error."
      }
    },
	"CentOSVersion": {
      "type": "string",
      "defaultValue": "7.0",
	  "allowedValues": [
        "6.5",
        "6.6",
		"6.7",
		"7.0",
		"7.1",
		"7.2"		
      ],
      "metadata": {
        "description": "The CentOS version for the VM. This will pick a fully patched image of this given CentOS version."
      }
    },
	"secondaryNodes": {
      "type": "int",
      "defaultValue": 2,
      "metadata": {
        "description": "Number of MongoDB secondary node (2 is the default), the value should be even numbers, like 2, 4, or 6. And 6 is the maximum number of secondary nodes."
      }
    },
    "primaryNodeVmSize": {
      "type": "string",
      "defaultValue": "Standard_D3",
      "allowedValues": [
        "Standard_A1",
        "Standard_A2",
        "Standard_A3",
        "Standard_A4",
        "Standard_A5",
        "Standard_A6",
        "Standard_A7",
        "Standard_D1",
        "Standard_D2",
        "Standard_D3",
        "Standard_D4",
        "Standard_D1_v2",
        "Standard_D2_v2",
        "Standard_D3_v2",
        "Standard_D4_v2"
      ],
      "metadata": {
        "description": "The size of the virtual machines used when provisioning the primary node"
      }
    },
    "secondaryNodeVmSize": {
      "type": "string",
      "defaultValue": "Standard_D3",
      "allowedValues": [
        "Standard_A1",
        "Standard_A2",
        "Standard_A3",
        "Standard_A4",
        "Standard_A5",
        "Standard_A6",
        "Standard_A7",
        "Standard_D1",
        "Standard_D2",
        "Standard_D3",
        "Standard_D4",
        "Standard_D1_v2",
        "Standard_D2_v2",
        "Standard_D3_v2",
        "Standard_D4_v2"
      ],
      "metadata": {
        "description": "The size of the virtual machines used when provisioning secondary node(s)"
      }
    },
	"zabbixServer": {
	  "type": "string",
	  "defaultValue": "Null",
	  "metadata": {
	    "description": "The zabbix server IP which will monitor the mongodb nodes' mongodb status. Null means no zabbix server."
	  }
	}
  },
  "variables": {
    "templateBaseUrl": "https://raw.githubusercontent.com/251744647/azure-quickstart-templates/master/mongodb-replica-set-centos/nested/",
    "sharedTemplateUrl": "[concat(variables('templateBaseUrl'), 'shared-resources.json')]",
    "primaryTemplateUrl": "[concat(variables('templateBaseUrl'), 'primary-resources.json')]",
    "secondaryTemplateUrl": "[concat(variables('templateBaseUrl'), 'secondary-resources.json')]",
    "namespace": "mongodb-",
    "virtualNetworkName": "myVNET",
    "apiVersion": "2015-01-01",
    "networkSettings": {
      "virtualNetworkName": "[variables('virtualNetworkName')]",
      "addressPrefix": "10.0.0.0/16",
      "subnet": {
        "dse": {
          "name": "dse",
          "prefix": "10.0.0.0/24",
          "vnet": "[variables('virtualNetworkName')]"
        }
      },
      "statics": {
        "clusterRange": {
          "base": "10.0.0.",
          "start": 5
        },
        "primaryIp": "10.0.0.240",
      }
    },
    "primaryOsSettings": {
      "imageReference": {
        "publisher": "OpenLogic",
        "offer": "CentOS",
        "sku": "[parameters('CentOSVersion')]",
        "version": "latest"
      },
      "scripts": [
        "https://raw.githubusercontent.com/251744647/azure-quickstart-templates/master/mongodb-replica-set-centos/scripts/primary.sh"
      ]
    },
    "secondaryOsSettings": {
      "imageReference": {
        "publisher": "OpenLogic",
        "offer": "CentOS",
        "sku": "[parameters('CentOSVersion')]",
        "version": "latest"
      },
      "scripts": [
        "https://raw.githubusercontent.com/251744647/azure-quickstart-templates/master/mongodb-replica-set-centos/scripts/secondary.sh"
      ]
    }
  },
  "resources": [
    {
      "name": "shared",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "[variables('apiVersion')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('sharedTemplateUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "networkSettings": {
            "value": "[variables('networkSettings')]"
          }
        }
      }
    },
    {
      "name": "[concat('secondaryNode', copyindex())]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "[variables('apiVersion')]",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', 'shared')]"
      ],
	  "copy": {
        "name": "vmLoop",
        "count": "[parameters('secondaryNodes')]"
      },
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('secondaryTemplateUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
		  "replSetName": {
            "value": "[parameters('replSetName')]"
          },
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "namespace": {
            "value": "[variables('namespace')]"
          },
          "vmbasename": {
            "value": "[concat('secondary', copyindex())]"
          },
          "subnet": {
            "value": "[variables('networkSettings').subnet.dse]"
          },
		  "dnsname": {
            "value": "[parameters('dnsNamePrefix')]"
          },
          "vmSize": {
            "value": "[parameters('secondaryNodeVmSize')]"
          },
		  "zabbixServer": {
		    "value": "[parameters('zabbixServer')]"
		  },
          "osSettings": {
            "value": "[variables('secondaryOsSettings')]"
          }
        }
      }
    },
	{
      "name": "primaryNode",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "[variables('apiVersion')]",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', 'shared')]",
	    "['vmLoop']"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('primaryTemplateUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
		  "replSetName": {
            "value": "[parameters('replSetName')]"
          },
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
		  "mongoAdminUsername": {
            "value": "[parameters('mongoAdminUsername')]"
          },
          "mongoAdminPassword": {
            "value": "[parameters('mongoAdminPassword')]"
          },
          "namespace": {
            "value": "[variables('namespace')]"
          },
          "vmbasename": {
            "value": "primary"
          },
          "subnet": {
            "value": "[variables('networkSettings').subnet.dse]"
          },
          "dnsname": {
            "value": "[parameters('dnsNamePrefix')]"
          },
          "staticIp": {
            "value": "[variables('networkSettings').statics.primaryIp]"
          },
		  "secondaryNodes": {
		    "value": "[parameters('secondaryNodes')]"
		  },
          "vmSize": {
            "value": "[parameters('primaryNodeVmSize')]"
          },
		  "zabbixServer": {
		    "value": "[parameters('zabbixServer')]"
		  },
          "osSettings": {
            "value": "[variables('primaryOsSettings')]"
          }
        }
      }
    }
  ],
  "outputs": {}
}
