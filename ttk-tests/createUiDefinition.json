{
  "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
  "handler": "Microsoft.Compute.MultiVm",
  "version": "0.1.2-preview",
  "parameters": {
    "basics": [
      {
        "name": "vmName",
        "type": "Microsoft.Common.TextBox",
        "label": "Deep Security Manager VM name",
        "toolTip": "The name of the Deep Security Manager VM.",
        "constraints": {
          "required": true,
          "regex": "^[a-z0-9A-Z]{1,15}$",
          "validationMessage": "Only letters and numbers are allowed, and the value must be 1-15 characters long."
        }
      },
      {
        "name": "userName",
        "type": "Microsoft.Compute.UserNameTextBox",
        "label": "Your Username",
        "toolTip": "Select a username to sign in to the Deep Security Manager VM",
        "constraints": {
          "required": true
        },
        "osPlatform": "Linux"
      },
      {
        "name": "admPassword",
        "type": "Microsoft.Compute.CredentialsCombo",
        "label": {
          "authenticationType": "Authentication type",
          "password": "Your password",
          "confirmPassword": "Confirm password",
          "sshPublicKey": "SSH public key"
        },
        "toolTip": {
          "authenticationType": "",
          "password": "Select a password to use when signing in to the Deep Security Manager VM",
          "sshPublicKey": ""
        },
        "constraints": {
          "required": true
        },
        "options": {
          "hideConfirmation": true
        },
        "osPlatform": "Linux"
      }
    ],
    "steps": [
      {
        "name": "dsmVMSizeAndPortal",
        "label": "Deep Security Manager VM",
        "subLabel": {
          "preValidation": "VM configuration and pricing",
          "postValidation": "Done"
        },
        "bladeTitle": "Deep Security Manager VM",
        "elements": [
          {
            "name": "vmSize",
            "type": "Microsoft.Compute.SizeSelector",
            "label": "VM Size",
            "toolTip": "VM Size",
            "recommendedSizes": [
                "Standard_D2_v2",
                "Standard_D3_v2",
                "Standard_D4_v2",
                "Standard_D5_v2"
            ],
            "constraints": {
              "excludedSizes": [
                "Basic_A0",
                "Basic_A1",
                "Basic_A2",
                "Standard_A0",
                "Standard_A1",
                "Standard_A2",
                "Standard_D1",
                "Standard_D1_v2",
                "Standard_DS1",
                "Standard_DS1_v2"
                ]
            },
            "osPlatform": "Linux",
            "imageReference": {
              "publisher": "trendmicro",
              "offer": "deep-security-vm-byol",
              "sku": "dxxnbyol"
            },
            "count": 1
          },
          {
            "name": "publicIPAddressDomainName",
            "type": "Microsoft.Network.PublicIpAddressCombo",
            "label": {
              "publicIpAddress": "Public IP address",
              "domainNameLabel": "Deep Security Manager URL"
            },
            "toolTip": {
              "publicIpAddress": "Use a public IP address if you want to communicate with the virtual machine from outside the virtual network with public IP address instead of URL.",
              "domainNameLabel": "Specify a DNS name which will be used to access this instance of Deep Security Manager"
            },
            "defaultValue": {
              "publicIpAddressName": "[basics('vmName')]",
              "domainNameLabel": "[basics('vmName')]"
            },
            "options": {
              "hideNone": true,
              "hideDomainNameLabel": false,
              "hideExisting": true
            },
            "constraints": {
              "required": {
                "domainNameLabel": true
              }
            }
          },
          {
            "name": "managerPort",
            "type": "Microsoft.Common.TextBox",
            "label": "Deep Security Manager console port",
            "toolTip": "The port used to log in to the Deep Security Manager console.",
            "defaultValue": "443",
            "constraints": {
              "required": true,
              "regex": "^(?!0$|1$|7$|9$|11$|13$|15$|17$|19$|20$|21$|22$|23$|25$|37$|42$|43$|53$|77$|79$|87$|95$|101$|102$|103$|104$|109$|110$|111$|113$|115$|117$|119$|123$|135$|139$|143$|179$|389$|465$|512$|513$|514$|515$|526$|530$|531$|532$|540$|556$|563$|587$|601$|636$|993$|995$|2049$|3659$|4045$|4118$|4122$|6000$|6665$|6666$|6667$|6668$|6669$|8443$)([1-9][0-9]{0,3}|[1-5][0-9]{4}|6[0-4][0-9]{3}|65[0-4][0-9]{2}|655[0-2][0-9]|6553[0-5])$",
              "validationMessage": "The specified port is not allowed. The Deep Security Manager console port can only contain numbers between 0-65535 and it cannot include any reserved ports. Please try again with a different value."
            }
          },
          {
            "name": "heartbeatPort",
            "type": "Microsoft.Common.TextBox",
            "label": "Heartbeat Port",
            "toolTip": "The port used by Agents to communicate with the Deep Security Manager.",
            "defaultValue": "4120",
            "constraints": {
              "required": true,
              "regex": "^(?!0$|1$|7$|9$|11$|13$|15$|17$|19$|20$|21$|22$|23$|25$|37$|42$|43$|53$|77$|79$|87$|95$|101$|102$|103$|104$|109$|110$|111$|113$|115$|117$|119$|123$|135$|139$|143$|179$|389$|465$|512$|513$|514$|515$|526$|530$|531$|532$|540$|556$|563$|587$|601$|636$|993$|995$|2049$|3659$|4045$|4118$|4122$|6000$|6665$|6666$|6667$|6668$|6669$|8443$)([1-9][0-9]{0,3}|[1-5][0-9]{4}|6[0-4][0-9]{3}|65[0-4][0-9]{2}|655[0-2][0-9]|6553[0-5])$",
              "validationMessage": "The specified port is not allowed. The Heartbeat Port can only contain numbers between 0-65535 and it cannot include any reserved ports. Please try again with a different value."
            }
          }
        ]
      },
      {
        "name": "dbSettings",
        "label": "Deep Security Database",
        "subLabel": {
          "preValidation": "Database Settings",
          "postValidation": "Done"
        },
        "bladeTitle": "Deep Security Database",
        "elements": [
          {
            "name": "databaseOption",
            "type": "Microsoft.Common.OptionsGroup",
            "label": "Azure SQL Database",
            "defaultValue": "Create New",
            "toolTip": "Create New: Select this option to create a new Azure SQL database instance for the Deep Security Manager VM. This option should be chosen for a new installation or when creating the first node of Deep Security Manager in a multi-node environment.<br/><br/>Use Existing: This option uses an existing Azure SQL database instance from a prior installation of Deep Security Manager. Choose this option if you wish to add a second node (or additional nodes) as part of a multi-node installation of Deep Security Manager.",
            "constraints": {
                "allowedValues": [
                {
                    "label": "Create New",
                    "value": "new"
                },
                {
                    "label": "Use Existing",
                    "value": "existing"
                }
                ]
            }
          },
          {
            "name": "existingSQLServerNameSection",
            "type": "Microsoft.Common.Section",
            "label": "The Database Hostname string is a mandatory input if 'Use Existing' is selected. Leave blank for the 'Create New' option.",
            "elements": [
                {
                  "name": "existingSQLServerName",
                  "type": "Microsoft.Common.TextBox",
                  "label": "Database Hostname",
                  "toolTip": "It's required if you want to use an existing database.",
                  "constraints": {
                    "required": false,
                    "regex": ".*",
                    "validationMessage": "Only valid FQDN or IP addresses are allowed."
                  }
                }
            ]
          },
          {
            "name": "dbName",
            "type": "Microsoft.Common.TextBox",
            "label": "Database Name",
            "defaultValue": "dsm",
            "toolTip": "Enter the name of the Azure SQL database instance",
            "constraints": {
              "required": true,
              "regex": "^[a-zA-Z][a-zA-Z0-9]{0,9}$",
              "validationMessage": "Only letters and numbers are allowed, and the value must be 1-10 characters long and starts with a letter."
            }
          },
          {
            "name": "dbAdminName",
            "type": "Microsoft.Common.TextBox",
            "label": "Database Admin Name",
            "defaultValue": "",
            "constraints": {
              "required": true,
              "regex": "^(?!admin$|administrator$|sa$|root$|dbmanager$|loginmanager$|dbo$|guest$|information_schema$|sys$|db_accessadmin$|db_backupoperator$|db_datareader$|db_datawriter$|db_ddladmin$|db_denydatareader$|db_denydatawriter$|db_owner$|db_securityadmin$|public$)[a-zA-Z][a-zA-Z0-9]{1,9}$",
              "validationMessage": "Only letters and numbers are allowed, and the value must be 2-10 characters long and starts with a letter."
            }
          },
          {
            "name": "dbAdminPassword",
            "type": "Microsoft.Common.PasswordBox",
            "label": {
              "password": "Database Admin Password",
              "confirmPassword": "Confirm password"
            },
            "constraints": {
              "required": true,
              "regex": "^(?=.*[A-Z])(?=.*[!@#$%])(?=.*[0-9])(?=.*[a-z])[a-zA-Z0-9!@#$%]{8,128}$",
              "validationMessage": "The password must be 8-128 characters in length and include at least one uppercase letter, one lowercase letter, one number, and one of the following symbols: !@#$%."
            },
            "options": {
              "hideConfirmation": false
            }
          }
        ]
      },
      {
        "name": "dsmCredential",
        "label": "Deep Security Credentials",
        "subLabel": {
          "preValidation": "Configure credentials",
          "postValidation": "Done"
        },
        "bladeTitle": "Deep Security Credentials",
        "elements": [
          {
            "name": "dsmAdminName",
            "type": "Microsoft.Common.TextBox",
            "label": "Deep Security Admin Name",
            "defaultValue": "",
            "toolTip": "Enter a username for the Deep Security Manager administrator. This username will be required to log into the Deep Security web management console.",
            "constraints": {
              "required": true,
              "regex": "^[a-z][a-z0-9]{0,9}$",
              "validationMessage": "Only lowercase letters and numbers are allowed, and the value must be 1-10 characters long and starts with a letter."
            }
          },
          {
            "name": "dsmAdminPassword",
            "type": "Microsoft.Common.PasswordBox",
            "label": {
              "password": "Deep Security Admin Password",
              "confirmPassword": "Confirm password"
            },
            "constraints": {
              "required": true,
              "regex": "^(?=.*[A-Z])(?=.*[!@#$%])(?=.*[0-9])(?=.*[a-z]).{8,16}$",
              "validationMessage": "The password must be 8-16 characters in length and include at least one uppercase letter, one lowercase letter, one number, and one of the following symbols: !@#$%."
            },
            "options": {
              "hideConfirmation": false
            }
          }
        ]
      },
      {
        "name": "advSettings",
        "label": "Network Settings",
        "subLabel": {
          "preValidation": "Review network settings",
          "postValidation": "Done"
        },
        "bladeTitle": "Network Settings",
        "elements": [
          {
            "name": "vnetwork",
            "type": "Microsoft.Network.VirtualNetworkCombo",
            "label": {
              "virtualNetwork": "Virtual network",
              "subnets": "Subnets"
            },
            "toolTip": {
              "virtualNetwork": "",
              "subnets": ""
            },
            "defaultValue": {
              "name": "dsmvnet01",
              "addressPrefixSize": "/16"
            },
            "constraints": {
              "minAddressPrefixSize": "/29"
            },
            "options": {
              "hideExisting": false
            },
            "subnets": {
              "VMsubnet": {
                "label": "VM Subnet",
                "defaultValue": {
                  "name": "vmsubnet",
                  "addressPrefixSize": "/24"
                },
                "constraints": {
                  "minAddressPrefixSize": "/29",
                  "minAddressCount": 2,
                  "requireContiguousAddresses": true
                }
              }
            }
          }
        ]
      }
    ],
    "outputs": {
      "location": "[location()]",
      "vmName": "[basics('vmName')]",
      "vmAdminName": "[basics('userName')]",
      "vmAuthType": "[basics('admPassword').authenticationType]",
      "vmAdminSshPublicKey": "[basics('admPassword').sshPublicKey]",
      "vmAdminPassword": "[basics('admPassword').password]",
      "vmSize": "[steps('dsmVMSizeAndPortal').vmSize]",
      "managerPort": "[steps('dsmVMSizeAndPortal').managerPort]",
      "heartbeatPort": "[steps('dsmVMSizeAndPortal').heartbeatPort]",
      "databaseOption": "[steps('dbSettings').databaseOption]",
      "dsmAdminName": "[steps('dsmCredential').dsmAdminName]",
      "dsmAdminPassword": "[steps('dsmCredential').dsmAdminPassword]",
      "dbName": "[steps('dbSettings').dbName]",
      "dbAdminName": "[steps('dbSettings').dbAdminName]",
      "dbAdminPassword": "[steps('dbSettings').dbAdminPassword]",
      "existingSQLServerName": "[steps('dbSettings').existingSQLServerNameSection.existingSQLServerName]",
      "publicIPAddressName": "[steps('dsmVMSizeAndPortal').publicIPAddressDomainName.name]",
      "publicIPDomainNameLabel": "[steps('dsmVMSizeAndPortal').publicIPAddressDomainName.domainNameLabel]",
      "virtualNetworkName": "[steps('advSettings').vnetwork.name]",
      "virtualNetworkResourceGroup": "[steps('advSettings').vnetwork.resourceGroup]",
      "networkExists": "[steps('advSettings').vnetwork.newOrExisting]",
      "networkAddress_new": "[coalesce(steps('advSettings').vnetwork.addressPrefix,'')]",
      "subnetName": "[steps('advSettings').vnetwork.subnets.VMsubnet.name]",
      "subnetAddress_new": "[steps('advSettings').vnetwork.subnets.VMsubnet.addressPrefix]"
    }
  }
}
