{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "serverAdminUsername": {
      "type": "string",
      "metadata": {
        "description": "Username for PG Server"
      }
    },
    "serverAdminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Password for PG Server"
      }
    }
  },
  "variables": {
    "storageAccountName": "[concat(uniqueString(resourceGroup().id),'storage')]",
    "serverName": "[concat('server', uniqueString(resourceGroup().id))]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[variables('storageAccountName')]",
      "apiVersion": "2019-04-01",
      "location": "[resourceGroup().location]",
      "comments": "Storage account ",
      "tags": {
        "displayName": "Storage Account"
      },
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "Storage",
      "properties": {}
    },
    {
      "apiVersion": "2017-12-01",
      "type": "Microsoft.DBforPostgreSQL/servers",
      "kind": "",
      "location": "[resourceGroup().location]",
      "name": "[variables('serverName')]",
      "properties": {
        "version": "10.0",
        "administratorLogin": "[parameters('serverAdminUsername')]",
        "administratorLoginPassword": "[parameters('serverAdminPassword')]",
        "storageProfile": {
          "storageMB": 51200,
          "backupRetentionDays": 7,
          "geoRedundantBackup": "Disabled"
        }
      },
      "sku": {
        "name": "GP_Gen5_2",
        "tier": "GeneralPurpose",
        "capacity": 2,
        "size": "51200",
        "family": "Gen5"
      },
      "resources": [
        {
           "type": "firewallRules",
           "apiVersion": "2017-12-01",
           "location": "[parameters('location')]",
           "name": "AllowAllAzure",
           "dependsOn": [
               "[resourceId('Microsoft.DBforPostgreSQL/servers', variables('serverName'))]"
           ],
           "properties": {
               "startIpAddress": "0.0.0.0",
               "endIpAddress": "0.0.0.0"
           }
         }
      ]      
    }   
  ],
  "outputs": {
    "AzureStorage_connectionString": {
      "type": "securestring",
      "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',variables('storageAccountName'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2016-01-01').keys[0].value)]"
    },
    "AzurePostgreSqlDatabase_connectionString": {
      "type": "securestring",
      "value": "[concat('Server=', variables('serverName'),'.postgres.database.azure.com;Port=5432;Database=postgres;UID=', parameters('serverAdminUsername'), ';Password=', parameters('serverAdminPassword'), ';SSL Mode=Require')]"
    }
  }
}
