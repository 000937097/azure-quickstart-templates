{
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "serviceName": {
            "type": "String",
            "metadata": {
                "description": "The name of the service."
            }
        },
        "environmentName": {
            "allowedValues": [
                "global",
                "gov"
            ],
            "type": "String",
            "metadata": {
                "description": "The type of environment to deploy the service"
            }
        },
        "location": {
            "defaultValue": "[resourceGroup().location]",
            "type": "String",
            "metadata": {
                "description": "Location of Azure API for FHIRÂ®"
            }
        }
    },
    "variables": {
        "authenticationConfiguration": {
            "global": {
                "audience": ".azurehealthcareapis.com",
                "authority": "https://login.microsoftonline.com/"
            },
            "gov": {
                "audience": ".azurehealthcareapis.us",
                "authority": "https://login.microsoftonline.us/"
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.HealthcareApis/services",
            "apiVersion": "2019-09-16",
            "name": "[parameters('serviceName')]",
            "location": "[resourceGroup().location]",
            "kind": "fhir-R4",
            "properties": {
                "authenticationConfiguration": {
                    "audience": "[concat('https://', parameters('serviceName'), variables('authenticationConfiguration')[parameters('environmentName')].audience)]",
                    "authority": "[concat(variables('authenticationConfiguration')[parameters('environmentName')].authority, subscription().tenantId)]"
                }
            }
        }
    ]
}